@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout"; // Use your site's layout
}

<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h1 class="display-1"><i class="bi bi-exclamation-triangle-fill"></i> 403</h1>
        <h2 class="display-4">Forbidden</h2>
        <p class="lead">You don't have permission to access this resource.</p>
        <hr>
        <p>
            The company or resource you're trying to access is either invalid or you don't have
            the necessary permissions.
        </p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-3">
            <i class="bi bi-house-door"></i> Return to Dashboard
        </a>
    </div>
</div>