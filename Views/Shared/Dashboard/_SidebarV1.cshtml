<div class="sidebar-area" id="sidebar-area">
    <div class="logo position-relative">
        <a href="/dashboard" class="d-block text-decoration-none position-relative">
            <img src="~/images/logo-icon.png" alt="logo-icon" />
            <span class="logo-text fw-bold text-dark">AMES</span>
            <span id="sidebarCompanyName" class="company-name"></span>
        </a>
        <button class="sidebar-burger-menu bg-transparent p-0 border-0 opacity-0 z-n1 position-absolute top-50 end-0 translate-middle-y" id="sidebar-burger-menu">
            <i data-feather="x"></i>
        </button>
    </div>

    <aside id="layout-menu" class="layout-menu menu-vertical menu active" data-simplebar>
        <ul class="menu-inner">
            <li class="menu-item @(Context.Request.Path.StartsWithSegments("/dashboard") ? "open" : "")">
                <a href="javascript:void(0);"
                   class="menu-link menu-toggle @(Context.Request.Path.StartsWithSegments("/dashboard") ? "active" : "")">
                    <span class="material-symbols-outlined menu-icon">dashboard</span>
                    <span class="title">Dashboard</span>
                </a>

                <ul class="menu-sub">
                    <li class="menu-item">
                        <a href="/dashboard/finance"
                           class="menu-link @(Context.Request.Path == "/dashboard/finance" ? "active" : "")">
                            Finance
                        </a>
                    </li>
                    <li class="menu-item mb-0">
                        <a href="/dashboard/hrm"
                           class="menu-link @(Context.Request.Path == "/dashboard/hrm" ? "active" : "")">
                            HRM
                        </a>
                    </li>
                    <li class="menu-item mb-0">
                        <a href="/dashboard/sales"
                           class="menu-link @(Context.Request.Path == "/dashboard/sales" ? "active" : "")">
                            Sales
                        </a>
                    </li>
                </ul>
            </li>

            @foreach (var module in modules)
            {
            <li class="menu-item @(Context.Request.Path.StartsWithSegments($"/{@module.ModuleName.ToLower()}") ? "open" : "")">
                <a href="javascript:void(0);"
                   class="menu-link menu-toggle @(Context.Request.Path.StartsWithSegments($"/{@module.ModuleName.ToLower()}") ? "active" : "")">
                    <span class="title">@module.ModuleName</span>
                </a>

                <ul class="menu-sub">
                    @foreach (var transaction in module.Transactions)
                        {
                    <li class="menu-item">
                        <a asp-area="@module.ModuleName.ToLower()"
                           asp-controller="@transaction.TransactionName.ToLower()"
                           asp-action="Index"
                           class="menu-link @(Context.Request.Path == $"/{module.ModuleName.ToLower()}/{transaction.TransactionName.ToLower()}/Index" ? "active" : "")">
                            @transaction.TransactionName
                        </a>
                    </li>
                        }
                </ul>
            </li>
            }

            <li class="menu-item">
                <form asp-controller="Auth" asp-action="Logout" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()-->
