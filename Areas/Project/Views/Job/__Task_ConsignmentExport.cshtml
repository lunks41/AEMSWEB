        let consignmentExportData = {
            ConsignmentExportId: parseInt($('#consignmentExportId').val()) || 0,
            JobOrderId: parseInt($('#consignmentExport_jobOrderId').val()) || 0,
            JobOrderNo: $('#consignmentExport_jobOrderNo').val() || '',
            CargoTypeId: parseInt($('#consignmentExport_cmb_cargoType').data('kendoComboBox').value()) || 0,
            TypeId: parseInt($('#consignmentExport_cmb_type').data('kendoComboBox').value()) || 0,
            ChargeId: parseInt($('#consignmentExport_cmb_charge').data('kendoComboBox').value()) || 0,
            GLId: parseInt($('#consignmentExport_cmb_gl').data('kendoMultiColumnComboBox').value()) || 0,
            SupplierId: parseInt($('#consignmentExport_cmb_supplier').data('kendoMultiColumnComboBox').value()) || null,
            ModeId: parseInt($('#consignmentExport_cmb_mode').data('kendoComboBox').value()) || null,
            LocationLookupId: parseInt($('#consignmentExport_cmb_location').data('kendoComboBox').value()) || null,
            UomId: parseInt($('#consignmentExport_cmb_uom').data('kendoComboBox').value()) || null,
            StatusId: parseInt($('#consignmentExport_cmb_status').data('kendoComboBox').value()) || 0,

            ConsignmentNo: $('#consignmentExport_consignmentNo').val() || '',
            AWBNumber: $('#consignmentExport_awbNumber').val() || '',
            HawbNumber: $('#consignmentExport_hawbNumber').val() || '',
            DeclarationNumber: $('#consignmentExport_declarationNumber').val() || '',
            BookingDate: $('#consignmentExport_bookingDate').val() || null,
            Weight: parseFloat($('#consignmentExport_weight').val()) || 0,
            NoOfPcs: parseInt($('#consignmentExport_noOfPcs').val()) || null,
            PickupLocation: $('#consignmentExport_pickupLocation').val() || '',
            PickupLocationAddress: $('#consignmentExport_pickupLocationAddress').val() || '',
            DeliveryLocation: $('#consignmentExport_deliveryLocation').val() || '',
            DeliveryLocationAddress: $('#consignmentExport_deliveryLocationAddress').val() || '',
            DateReceived: $('#consignmentExport_dateReceived').val() || null,
            DateDelivered: $('#consignmentExport_dateDelivered').val() || null,
            Quantity: parseFloat($('#consignmentExport_quantity').val()) || null,
            ReferenceNumber: $('#consignmentExport_referenceNumber').val() || '',
            BillEntryNumber: $('#consignmentExport_billEntryNumber').val() || '',
            ClearedBy: $('#consignmentExport_clearedBy').val() || '',
            TransporterName: $('#consignmentExport_transporterName').val() || '',
            AmountDeposited: parseFloat($('#consignmentExport_amountDeposited').val()) || null,
            RefundAmt: parseFloat($('#consignmentExport_refundAmt').val()) || null,
            RefundInstrumentNumber: $('#consignmentExport_refundInstrumentNumber').val() || '',

            IsDepositRefundReceived: $('#consignmentExport_isDepositRefundReceived').is(':checked'),
            IsWarehouseCharges: $('#consignmentExport_isWarehouseCharges').is(':checked'),
            IsRefundedReceived: $('#consignmentExport_isRefundedReceived').is(':checked'),
            IsRefundedExpected: $('#consignmentExport_isRefundedExpected').is(':checked'),

            TotAmt: parseFloat($('#consignmentExport_totAmt').val()) || 0,
            GstAmt: parseFloat($('#consignmentExport_gstAmt').val()) || 0,
            TotAmtAftGst: parseFloat($('#consignmentExport_totAmtAftGst').val()) || 0,
            Remarks: $('#consignmentExport_remarks').val() || '',

            DebitNoteId: parseInt($('#consignmentExport_debitNoteId').val()) || null,
            DebitNoteNo: $('#consignmentExport_debitNoteNo').val() || '',
            TaskId: 3, // Assuming TaskId 3 is for Consignment Export
        };

        $.ajax({
            url: '@Url.Action("SaveConsignmentExport", "Job", new { area = "Project" })',
            type: "POST",
            data: JSON.stringify({ consignmentExport: consignmentExportData, companyId }),
            contentType: "application/json",
            success: function (response) {
                if (response.success) {
                    initializeConsignmentExportGrid();
                    clearConsignmentExportForm();
                    $('#addConsignmentExportModal').modal('hide');
                } else {
                    alert(response.message || "Failed to save consignment export.");
                }
            },
            error: function (xhr) {
                alert("Error: " + (xhr.responseJSON?.message || "An unexpected error occurred"));
            }
        });
    }

    // Calculate GST amounts on change
    $('#consignmentExport_amountDeposited').on('change', function() {
        const amount = parseFloat($(this).val()) || 0;
        const gstRate = 0.07; // Assuming 7% GST

        const gstAmt = amount * gstRate;
        const totAmt = amount;
        const totAmtAftGst = totAmt + gstAmt;

        $('#consignmentExport_totAmt').val(totAmt.toFixed(2));
        $('#consignmentExport_gstAmt').val(gstAmt.toFixed(2));
        $('#consignmentExport_totAmtAftGst').val(totAmtAftGst.toFixed(2));
    });
</script>