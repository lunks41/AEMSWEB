        $('#consignmentExport_amountDeposited').val(data.amountDeposited);
        $('#consignmentExport_refundAmt').val(data.refundAmt);
        $('#consignmentExport_refundInstrumentNumber').val(data.refundInstrumentNumber);
        $('#consignmentExport_totAmt').val(data.totAmt);
        $('#consignmentExport_gstAmt').val(data.gstAmt);
        $('#consignmentExport_totAmtAftGst').val(data.totAmtAftGst);
        $('#consignmentExport_remarks').val(data.remarks);

        // Set checkboxes
        $('#consignmentExport_isDepositRefundReceived').prop('checked', data.isDepositRefundReceived === true);
        $('#consignmentExport_isWarehouseCharges').prop('checked', data.isWarehouseCharges === true);
        $('#consignmentExport_isRefundedReceived').prop('checked', data.isRefundedReceived === true);
        $('#consignmentExport_isRefundedExpected').prop('checked', data.isRefundedExpected === true);

        // Set audit fields
        $('#consignmentExportcreateBy').text(data.createBy || "N/A");
        $('#consignmentExportcreateDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : "N/A");
        $('#consignmentExporteditBy').text(data.editBy || "N/A");
        $('#consignmentExporteditDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : "N/A");
        $('#consignmentExporteditVersion').text(data.editVersion || "0");

        // Hide clear button in edit mode
        $('#btnConsignmentExportClear').hide();

        // Enable/disable fields based on debitNoteId
        if (data.debitNoteId > 0) {
            // Disable dropdowns
            chargeCombo.enable(false);
            cargoTypeCombo.enable(false);
            typeCombo.enable(false);
            modeCombo.enable(false);
            locationCombo.enable(false);
            uomCombo.enable(false);
            statusCombo.enable(false);
            supplierCombo.enable(false);
            glCombo.enable(false);

            // Disable inputs
            $('input, textarea').not('#btnConsignmentExportSave').prop('readonly', true);
            $('input[type="checkbox"]').prop('disabled', true);
            $('#btnConsignmentExportSave').prop('disabled', false);
        } else {
            // Enable all controls
            chargeCombo.enable(true);
            cargoTypeCombo.enable(true);
            typeCombo.enable(true);
            modeCombo.enable(true);
            locationCombo.enable(true);
            uomCombo.enable(true);
            statusCombo.enable(true);
            supplierCombo.enable(true);
            glCombo.enable(true);

            $('input, textarea').not('#consignmentExport_totAmt, #consignmentExport_gstAmt, #consignmentExport_totAmtAftGst').prop('readonly', false);
            $('input[type="checkbox"]').prop('disabled', false);
            $('#btnConsignmentExportSave').prop('disabled', false);
        }
    }

