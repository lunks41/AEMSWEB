        showDeleteModal("Are you sure you want to delete this record?", function () {
            $.ajax({
                url: '@Url.Action("DeleteConsignmentExport", "Job", new { area = "Project" })',
                type: "DELETE",
                data: { jobOrderId, consignmentExportId, companyId: companyId },
