    function setDefaultConsignmentExportValues() {
        // Set current date
        const today = new Date().toISOString().split('T')[0];
        $('#consignmentExport_bookingDate').val(today);

        // Set default to first cargo type
        setTimeout(() => {
            const cargoTypeCombo = $('#consignmentExport_cmb_cargoType').data('kendoComboBox');
            if (cargoTypeCombo.dataSource.view().length > 0) {
                cargoTypeCombo.select(0);
            }
        }, 100);

        // Set default to first type
        setTimeout(() => {
            const typeCombo = $('#consignmentExport_cmb_type').data('kendoComboBox');
            if (typeCombo.dataSource.view().length > 0) {
                typeCombo.select(0);
            }
        }, 100);

        // Set default GL Account
        setTimeout(() => {
            const glCombo = $('#consignmentExport_cmb_gl').data('kendoMultiColumnComboBox');
            if (glCombo.dataSource.view().length > 0) {
                glCombo.select(0);
            }
        }, 100);

        // Set default to first charge
        setTimeout(() => {
            const chargeCombo = $('#consignmentExport_cmb_charge').data('kendoComboBox');
            if (chargeCombo.dataSource.view().length > 0) {
                chargeCombo.select(0);
            }
        }, 100);

        // Set default status to "Confirm"
        setTimeout(() => {
            const statusCombo = $('#consignmentExport_cmb_status').data('kendoComboBox');
            const confirmItem = statusCombo.dataSource.data().find(item =>
                item.orderTypeName.toLowerCase() === "confirmed"
            );
            if (confirmItem) {
                statusCombo.value(confirmItem.orderTypeId);
            }
        }, 100);
    }

    function openConsignmentExportModal(jobOrderId, jobOrderNo, consignmentExportId, mode) {
        const $modal = $('#addConsignmentExportModal');
        const parsedJobOrderId = parseInt(jobOrderId, 10);
        const parsedConsignmentExportId = parseInt(consignmentExportId, 10);
        $('#consignmentExport_jobOrderId').val(jobOrderId);
        $('#consignmentExport_jobOrderNo').val(jobOrderNo);

        const isValidId = id => !isNaN(id) && id !== null && id !== "" && id > 0;

        // Edit Mode: Fetch existing data and populate the form
        if (isValidId(parsedJobOrderId) && isValidId(parsedConsignmentExportId)) {
            $modal.find('.modal-content').append('<div class="modal-overlay"><div class="spinner"></div></div>');

            $.get('@Url.Action("GetConsignmentExportById", "Job", new { area = "Project" })', {
                jobOrderId: parsedJobOrderId,
                consignmentExportId: parsedConsignmentExportId,
                companyId: $('#companyId').val()
            })
                .done(function (response) {
                    if (response.success) {
                        refreshConsignmentExportDropdown();
                        clearConsignmentExportForm();
                        populateConsignmentExportModalFields(response.data);
                        $('#addConsignmentExportModal').modal('show');
                    }
                })
                .always(() => $modal.find('.modal-overlay').remove());
        } else {
            // Add Mode: Clear form and set default values
            refreshConsignmentExportDropdown();
            clearConsignmentExportForm();
            setDefaultConsignmentExportValues();

            $('#addConsignmentExportModal').modal('show');
        }
    }

    function populateConsignmentExportModalFields(data) {
