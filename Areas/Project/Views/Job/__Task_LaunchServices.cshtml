    function setDefaultDropdownValues() {
        // Set default GL Account
        $('#launchServices_cmb_gl').data('kendoMultiColumnComboBox').value(488);

        // Set default to first charge
        setTimeout(() => {
            const chargeCombo = $('#launchServices_cmb_charge').data('kendoComboBox');
            if (chargeCombo.dataSource.view().length > 0) {
                chargeCombo.select(0);
            }
        }, 100);

        // Set default to first UOM
        setTimeout(() => {
            const uomCombo = $('#launchServices_cmb_uom').data('kendoComboBox');
            if (uomCombo.dataSource.view().length > 0) {
                uomCombo.select(0);
            }
        }, 100);

        // Set default status to "Confirm"
        setTimeout(() => {
            const statusCombo = $('#launchServices_cmb_status').data('kendoComboBox');
            const confirmItem = statusCombo.dataSource.data().find(item =>
                item.orderTypeName.toLowerCase() === "confirmed"
            );
            if (confirmItem) {
                statusCombo.value(confirmItem.orderTypeId);
            }
        }, 100);
    }

    function openLaunchServicesModal(jobOrderId, jobOrderNo, launchServicesId, mode) {

        const $modal = $('#addLaunchServicesModal');
        const parsedJobOrderId = parseInt(jobOrderId, 10);
        const parsedLaunchServicesId = parseInt(launchServicesId, 10);
        $('#launchServices_jobOrderId').val(jobOrderId);
        $('#launchServices_jobOrderNo').val(jobOrderNo);

        const isValidId = id => !isNaN(id) && id !== null && id !== "" && id > 0;

        // Edit Mode: Fetch existing data and populate the form
        if (isValidId(parsedJobOrderId) && isValidId(parsedLaunchServicesId)) {

            $modal.find('.modal-content').append('<div class="modal-overlay"><div class="spinner"></div></div>');

            $.get('@Url.Action("GetLaunchServicesById", "Job", new { area = "Project" })', {
                jobOrderId: parsedJobOrderId,
                launchServicesId: parsedLaunchServicesId,
                companyId: $('#companyId').val()
            })
                .done(function (response) {
                    if (response.success) {
                        refreshLaunchServicesDropdown();
                        clearLaunchServicesForm();
                        populateLaunchServicesModalFields(response.data);
                        $('#addLaunchServicesModal').modal('show');
                    }
                })
                .always(() => $modal.find('.modal-overlay').remove());
        } else {
            // Add Mode: Clear form and set default values
            refreshLaunchServicesDropdown();
            clearLaunchServicesForm();
            setDefaultDropdownValues();

            $('#addLaunchServicesModal').modal('show');
        }
    }

    function populateLaunchServicesModalFields(data) {

        // Set hidden fields
        $('#companyId').val(data.companyId);
        $('#launchServicesId').val(data.launchServicesId);
        $('#launchServices_jobOrderId').val(data.jobOrderId);
        $('#launchServices_jobOrderNo').val(data.jobOrderNo);
        $('#launchServices_debitNoteId').val(data.debitNoteId);
        $('#launchServices_debitNoteNo').val(data.debitNoteNo);

        const chargeCombo = $('#launchServices_cmb_charge').data('kendoComboBox');
        chargeCombo.value(data.chargeId > 0 ? data.chargeId : '');
        chargeCombo.one('dataBound', function () {
            chargeCombo.value(data.chargeId > 0 ? data.chargeId : '');
        });

        const glCombo = $('#launchServices_cmb_gl').data('kendoMultiColumnComboBox');
        glCombo.value(data.glId > 0 ? data.glId : '');
        glCombo.one('dataBound', function () {
            glCombo.value(data.glId > 0 ? data.glId : '');
        });

        const uomCombo = $('#launchServices_cmb_uom').data('kendoComboBox');
        uomCombo.value(data.uomId > 0 ? data.uomId : '');
        uomCombo.one('dataBound', function () {
            uomCombo.value(data.uomId > 0 ? data.uomId : '');
        });

        const statusCombo = $('#launchServices_cmb_status').data('kendoComboBox');
        statusCombo.value(data.statusId > 0 ? data.statusId : '');
        statusCombo.one('dataBound', function () {
            statusCombo.value(data.statusId > 0 ? data.statusId : '');
        });

        // Set other fields
        $('#launchServices_quantity').val(data.quantity);
        const formattedDate = new Date(data.deliverDate).toLocaleDateString('en-CA');
        $('#launchServices_deliverDate').val(formattedDate);
        $('#isActive').prop('checked', data.isActive);
        $('#launchServices_remarks').val(data.remarks);

        // Set audit fields
        $('#launchServices_createBy').text(data.createBy || "N/A");
        $('#launchServices_createDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : "N/A");
        $('#launchServices_editBy').text(data.editBy || "N/A");
        $('#launchServices_editDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : "N/A");
        $('#launchServices_editVersion').text(data.editVersion || "0");

        // Hide clear button in edit mode
        $('#btnLaunchServicesClear').hide();

        // Enable/disable fields based on debitNoteId
        if (data.debitNoteId > 0) {
            chargeCombo.enable(false);
            uomCombo.enable(false);
            statusCombo.enable(false);
            supplierCombo.enable(false);
            glCombo.enable(false);
            $('#launchServices_quantity, #launchServices_deliverDate,  #launchServices_remarks').prop('readonly', true);
            $('#isActive').prop('disabled', false);
            $('#btnLaunchServicesSave').prop('disabled', false);
        } else {
            chargeCombo.enable(true);
            uomCombo.enable(true);
            statusCombo.enable(true);
            supplierCombo.enable(true);
            glCombo.enable(true);
            $('#launchServices_quantity, #launchServices_deliverDate,  #launchServices_remarks').prop('readonly', false);
            $('#isActive').prop('disabled', false);
            $('#btnLaunchServicesSave').prop('disabled', false);
        }
    }

    function deleteLaunchServices(jobOrderId, launchServicesId) {
        showDeleteModal("Are you sure you want to delete this record?", function () {
            $.ajax({
                url: '@Url.Action("DeleteLaunchServices", "Job", new { area = "Project" })',
                type: "DELETE",
                data: { jobOrderId, launchServicesId, companyId: companyId },
                success: function (response) {
                    if (response.success) {
                        loadLaunchServicesGrid();
                        $('#confirmationModal').modal('hide');
                    }
