    function calculateTimeDifferences() {
        // Get input elements
        const loadingTime = document.getElementById('loadingTime');
        const leftJetty = document.getElementById('leftJetty');
        const alongsideVessel = document.getElementById('alongsideVessel');
        const departedFromVessel = document.getElementById('departedFromVessel');

        // Get values and convert to dates
        const time1 = new Date(loadingTime.value);
        const time2 = new Date(leftJetty.value);
        const time3 = new Date(alongsideVessel.value);
        const time4 = new Date(departedFromVessel.value);

        // Calculate differences in milliseconds
        const diff2minus1 = time2 - time1;
        const diff4minus3 = time4 - time3;

        // Format time function
        function formatTime(duration) {
            if (duration < 0) return "Invalid time sequence";

            const hours = Math.floor(duration / 3600000);
            const minutes = Math.floor((duration % 3600000) / 60000);

            return `${hours} hours ${minutes} minutes`;
        }

        // Display results
        document.getElementById('time2minus1').textContent = formatTime(diff2minus1);
        document.getElementById('time4minus3').textContent = formatTime(diff4minus3);
    }

    function clearLaunchServicesForm() {

        $('#launchServicesId').val('');
        $('#launchServices_jobOrderId').val('');
        $('#launchServices_jobOrderNo').val('');
        $('#launchServices_debitNoteId').val('');
        $('#launchServices_debitNoteNo').val('');

        $('#launchServices_cmb_gl').data('kendoMultiColumnComboBox').value('');

        $('#launchServices_cmb_charge').data('kendoComboBox').value('');
        $('#launchServices_cmb_uom').data('kendoComboBox').value('');
        $('#launchServices_cmb_status').data('kendoComboBox').value('');

