            });
        });
    }

    function saveLaunchServices() {

        let launchServicesData = {
            LaunchServicesId: parseInt($('#launchServicesId').val()) || 0,
            JobOrderId: parseInt($('#launchServices_jobOrderId').val()) || 0,
            JobOrderNo: $('#launchServices_jobOrderNo').val() || '',
            ChargeId: parseInt($('#launchServices_cmb_charge').data('kendoComboBox').value()) || 0,
            GLId: parseInt($('#launchServices_cmb_gl').data('kendoMultiColumnComboBox').value()) || 0,
            Quantity: parseFloat($('#launchServices_quantity').val()) || 0,
            UomId: parseInt($('#launchServices_cmb_uom').data('kendoComboBox').value()) || 0,
            DeliverDate: $('#launchServices_deliverDate').val() || '',
            StatusId: parseInt($('#launchServices_cmb_status').data('kendoComboBox').value()) || 0,
            Remarks: $('#launchServices_remarks').val(),
            IsActive: 1,
            DebitNoteId: parseInt($('#launchServices_debitNoteId').val()) || 0,
            DebitNoteNo: $('#launchServices_debitNoteNo').val() || '',
        };

        console.log("LaunchServices Data : " + launchServicesData);

        $.ajax({
            url: '@Url.Action("SaveLaunchServices", "Job", new { area = "Project" })',
            type: "POST",
            data: JSON.stringify({ launchServices: launchServicesData, companyId }),
            contentType: "application/json",
            success: function (response) {
                if (response.success) {
                    initializeLaunchServicesGrid();
                    clearLaunchServicesForm();
                    $('#addLaunchServicesModal').modal('hide');
                } else {
                    alert(response.message || "Failed to save port expense.");
                }
            },
            error: function (xhr) {
                alert("Error: " + (xhr.responseJSON?.message || "An unexpected error occurred"));
            }
        });
    }
