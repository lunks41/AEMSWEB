<!-- CrewMisc Modal -->
<div class="modal fade" id="addCrewMiscModal" tabindex="-1" aria-labelledby="addCrewMiscModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCrewMiscModalLabel">Crew Miscellaneous</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="crewMiscForm">
                    <input type="hidden" id="crewMiscellaneous_jobOrderId" />
                    <input type="hidden" id="crewMiscellaneousId" />

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-1">
                                <label class="form-label">Crew Misc Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="crewMiscellaneous_launchServiceDate"
                                    required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Charge Code</label>
                            <select class="form-select" id="crewMiscellaneous_chargeId">
                                <option value="">Select Charge</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">GL Account <span class="text-danger">*</span></label>
                            <select class="form-select" id="crewMiscellaneous_glId" required>
                                <option value="">Select GL</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Quantity <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="crewMiscellaneous_quantity" step="0.01"
                                value="0.00" required>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-1">
                                <label class="form-label">Status <span class="text-danger">*</span></label>
                                <select class="form-select" id="statusId" required>
                                    <option value="">Select Status</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mb-1">
                                <label class="form-label">Remark</label>
                                <textarea class="form-control" id="remark" rows="2"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Fields -->
                    <div class="accordion mt-3" id="auditAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#auditCollapse">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="auditCollapse" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="freshwatercreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="freshwatercreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="freshwatereditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="freshwatereditDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Edit Version</label>
                                            <p id="freshwatereditVersion" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnBankCrewMiscClose"
                    onclick="clearBankCrewMiscForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnBankCrewMiscEdit">Edit</button>
                <button type="button" class="btn btn-secondary" id="btnBankCrewMiscClear"
                    onclick="clearBankCrewMiscForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnBankCrewMiscSave"
                    onclick="saveBankCrewMisc()">Save</button>
            </div>
        </div>
    </div>
</div>

<script>
    function refreshCrewMiscellaneousDropdown() {
        // Add dropdown binding logic specific to Crew Miscellaneous
    }

    function clearCrewMiscellaneousForm() {
        $('#crewMiscellaneous_jobOrderId').val('');
        $('#crewMiscellaneousId').val('');
        $('#crewMiscellaneous_launchServiceDate').val('');
        $('#crewMiscellaneous_chargeId').val('');
        $('#crewMiscellaneous_glId').val('');
        $('#crewMiscellaneous_quantity').val('');
    }

    function openCrewMiscellaneousModal(jobOrderId, jobOrderNo, crewMiscellaneousId, mode) {
        const $modal = $('#addCrewMiscellaneousModal');
        const parsedJobOrderId = parseInt(jobOrderId, 10);
        const parsedCrewMiscellaneousId = parseInt(crewMiscellaneousId, 10);
        $('#crewMiscellaneous_jobOrderId').val(jobOrderId);
        $('#crewMiscellaneous_jobOrderNo').val(jobOrderNo);

        if (parsedJobOrderId > 0 && parsedCrewMiscellaneousId > 0) {
            $modal.find('.modal-content').append('<div class="modal-overlay"><div class="spinner"></div></div>');
            $.get('@Url.Action("GetCrewMiscellaneousById", "Job", new { area = "Project" })', {
                jobOrderId: parsedJobOrderId,
                crewMiscellaneousId: parsedCrewMiscellaneousId,
                companyId: $('#companyId').val()
            })
                .done(function (response) {
                    if (response.success) {
                        refreshCrewMiscellaneousDropdown();
                        clearCrewMiscellaneousForm();
                        populateCrewMiscellaneousModalFields(response.data);
                        $('#addCrewMiscellaneousModal').modal('show');
                    }
                })
                .always(() => $modal.find('.modal-overlay').remove());
        } else {
            refreshCrewMiscellaneousDropdown();
            clearCrewMiscellaneousForm();
            setDefaultDropdownValues();
            $('#addCrewMiscellaneousModal').modal('show');
        }
    }

    function saveCrewMiscellaneous() {
        const crewMiscellaneousData = {
            JobOrderId: parseInt($('#crewMiscellaneous_jobOrderId').val()) || 0,
            CrewMiscellaneousId: parseInt($('#crewMiscellaneousId').val()) || 0,
            LaunchServiceDate: $('#crewMiscellaneous_launchServiceDate').val(),
            ChargeId: parseInt($('#crewMiscellaneous_chargeId').val()) || 0,
            GLId: parseInt($('#crewMiscellaneous_glId').val()) || 0,
            Quantity: parseFloat($('#crewMiscellaneous_quantity').val()) || 0
        };

        $.ajax({
            url: '@Url.Action("SaveCrewMiscellaneous", "Job", new { area = "Project" })',
            type: 'POST',
            data: JSON.stringify(crewMiscellaneousData),
            contentType: 'application/json',
            success: function (response) {
                if (response.success) {
                    alert('Crew Miscellaneous saved successfully!');
                    clearCrewMiscellaneousForm();
                    $('#addCrewMiscellaneousModal').modal('hide');
                } else {
                    alert(response.message || 'Failed to save crew miscellaneous.');
                }
            },
            error: function () {
                alert('An error occurred while saving the crew miscellaneous.');
            }
        });
    }

    function deleteCrewMiscellaneous(jobOrderId, crewMiscellaneousId) {
        showDeleteModal("Are you sure you want to delete this record?", function () {
            $.ajax({
                url: '@Url.Action("DeleteCrewMiscellaneous", "Job", new { area = "Project" })',
                type: "DELETE",
                data: { jobOrderId, crewMiscellaneousId, companyId: companyId },
                success: function (response) {
                    if (response.success) {
                        loadCrewMiscellaneousGrid();
                        $('#confirmationModal').modal('hide');
                    }
                }
            });
        });
    }

    function populateCrewMiscellaneousModalFields(data) {
        // Populate modal fields with data
        $('#companyId').val(data.companyId);
        $('#crewMiscellaneousId').val(data.crewMiscellaneousId);
        $('#crewMiscellaneous_jobOrderId').val(data.jobOrderId);
        $('#crewMiscellaneous_jobOrderNo').val(data.jobOrderNo);
        // ...existing code...
    }

    function setDefaultDropdownValues() {
        // Set default values for dropdowns
        $('#crewMiscellaneous_cmb_gl').data('kendoMultiColumnComboBox').value(488);
        // ...existing code...
    }
</script>