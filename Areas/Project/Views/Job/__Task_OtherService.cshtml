<!-- OtherService Modal -->
<div class="modal fade" id="addOtherServiceModal" tabindex="-1" aria-labelledby="addOtherServiceModalLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addOtherServiceModalLabel">Other Service</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="otherServiceForm">
                    <input type="hidden" id="otherService_jobOrderId" />
                    <input type="hidden" id="otherServiceId" />

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-1">
                                <label class="form-label">Service Provider</label>
                                <input type="text" class="form-control" id="landingItemName">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-1">
                                <label class="form-label">Other Service Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="landingItemDate" required>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Quantity <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="otherService_quantity" step="0.01"
                                value="0.00" required>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">UOM <span class="text-danger">*</span></label>
                            <select class="form-select" id="otherService_glId" required>
                                <option value="">Select UOM</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Charge Code</label>
                            <select class="form-select" id="otherService_chargeId">
                                <option value="">Select Charge</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">GL Account <span class="text-danger">*</span></label>
                            <select class="form-select" id="otherService_glId" required>
                                <option value="">Select GL</option>
                            </select>
                        </div>

                        <div class="col-md-4">
                            <div class="mb-1">
                                <label class="form-label">Status <span class="text-danger">*</span></label>
                                <select class="form-select" id="statusId" required>
                                    <option value="">Select Status</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-4">
                        </div>
                        <div class="col-md-4">
                        </div>


                        <div class="col-md-6">
                            <div class="mb-1">
                                <label class="form-label">Remark</label>
                                <textarea class="form-control" id="remark" rows="2"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Fields -->
                    <div class="accordion mt-3" id="auditAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                    data-bs-target="#auditCollapse">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="auditCollapse" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="freshwatercreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="freshwatercreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="freshwatereditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="freshwatereditDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Edit Version</label>
                                            <p id="freshwatereditVersion" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnBankOtherServiceClose"
                    onclick="clearBankOtherServiceForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnBankOtherServiceEdit">Edit</button>
                <button type="button" class="btn btn-secondary" id="btnBankOtherServiceClear"
                    onclick="clearBankOtherServiceForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnBankOtherServiceSave"
                    onclick="saveBankOtherService()">Save</button>
            </div>
        </div>
    </div>
</div>

<script>
    function refreshOtherServiceDropdown() {
        // Add dropdown binding logic specific to Other Service
    }

    function clearOtherServiceForm() {
        $('#otherService_jobOrderId').val('');
        $('#otherServiceId').val('');
        $('#otherService_quantity').val('');
        $('#otherService_chargeId').val('');
        $('#otherService_glId').val('');
        $('#otherService_weight').val('');
        $('#otherService_remarks').val('');
    }

    function openOtherServiceModal(serviceId, mode) {
        // Add modal opening logic specific to Other Service
    }

    function saveOtherService() {
        const otherServiceData = {
            OtherServiceId: parseInt($('#otherServiceId').val()) || 0,
            JobOrderId: parseInt($('#otherService_jobOrderId').val()) || 0,
            Quantity: parseFloat($('#otherService_quantity').val()) || 0,
            ChargeId: parseInt($('#otherService_chargeId').val()) || 0,
            GLId: parseInt($('#otherService_glId').val()) || 0,
            Weight: parseFloat($('#otherService_weight').val()) || 0,
            Remarks: $('#otherService_remarks').val()
        };

        $.ajax({
            url: '@Url.Action("SaveOtherService", "Job", new { area = "Project" })',
            type: 'POST',
            data: JSON.stringify(otherServiceData),
            contentType: 'application/json',
            success: function (response) {
                if (response.success) {
                    alert('Other Service saved successfully!');
                    clearOtherServiceForm();
                    $('#addOtherServiceModal').modal('hide');
                } else {
                    alert(response.message || 'Failed to save other service.');
                }
            },
            error: function () {
                alert('An error occurred while saving the other service.');
            }
        });
    }
</script>