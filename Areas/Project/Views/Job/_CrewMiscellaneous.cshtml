  <!-- CrewMisc Modal -->
<div class="modal fade" id="addCrewMiscModal" tabindex="-1" aria-labelledby="addCrewMiscModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addCrewMiscModalLabel">Crew Miscellaneous</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="crewMiscForm">
                    <input type="hidden" id="crewMisc_jobOrderId" />
                    <input type="hidden" id="crewMiscId" />

                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-1">
                                <label class="form-label">Crew Misc Date <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="launchServiceDate" required>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Charge Code</label>
                            <select class="form-select" id="chargeId">
                                <option value="">Select Charge</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">GL Account <span class="text-danger">*</span></label>
                            <select class="form-select" id="glId" required>
                                <option value="">Select GL</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Quantity <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="quantity" step="0.01" value="0.00" required>
                        </div>
                        <div class="col-md-4">
                            <div class="mb-1">
                                <label class="form-label">Status <span class="text-danger">*</span></label>
                                <select class="form-select" id="statusId" required>
                                    <option value="">Select Status</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-1">
                                <label class="form-label">Description</label>
                                <textarea class="form-control" id="miscDescription" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="mb-1">
                                <label class="form-label">Remark</label>
                                <textarea class="form-control" id="remark" rows="2"></textarea>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Fields -->
                    <div class="accordion mt-3" id="auditAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#auditCollapse">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="auditCollapse" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="freshwatercreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="freshwatercreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="freshwatereditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="freshwatereditDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Edit Version</label>
                                            <p id="freshwatereditVersion" class="form-control-plaintext"></p>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnBankCrewMiscClose" onclick="clearBankCrewMiscForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnBankCrewMiscEdit">Edit</button>
                <button type="button" class="btn btn-secondary" id="btnBankCrewMiscClear" onclick="clearBankCrewMiscForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnBankCrewMiscSave" onclick="saveBankCrewMisc()">Save</button>
            </div>
        </div>
    </div>
</div>