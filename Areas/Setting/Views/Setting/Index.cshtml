@{
    ViewData["Title"] = $"Setting";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<ul class="nav nav-pills mb-4 border-bottom pb-2" id="invoicePills" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="main-pill" data-bs-toggle="pill" data-bs-target="#decimal" type="button" role="tab">
            <i class="fas fa-calculator me-2"></i>Decimal
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="finance-tab" data-bs-toggle="tab" data-bs-target="#finance" type="button" role="tab">
            <i class="fas fa-coins me-2"></i>Finance
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="mandatory-tab" data-bs-toggle="tab" data-bs-target="#mandatory" type="button" role="tab">
            <i class="fas fa-asterisk me-2"></i>Mandatory
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="visibility-tab" data-bs-toggle="tab" data-bs-target="#visibility" type="button" role="tab">
            <i class="fas fa-eye me-2"></i>Visibility
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="number-format-tab" data-bs-toggle="tab" data-bs-target="#number-format" type="button" role="tab">
            <i class="fas fa-hashtag me-2"></i>Number Format
        </button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="user-setting-tab" data-bs-toggle="tab" data-bs-target="#user-setting" type="button" role="tab">
            <i class="fas fa-cog me-2"></i>User Setting
        </button>
    </li>
</ul>

<!-- Tab Contents -->
<div class="tab-content mt-3">
    <!-- Decimal Tab -->
    <div class="tab-pane fade" id="decimal" role="tabpanel">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Amount Decimal</label>
                <input type="number" class="form-control" min="0" max="8" value="2">
            </div>
            <div class="col-md-4">
                <label class="form-label">Local Amount Decimals </label>
                <input type="number" class="form-control" min="0" max="8" value="2">
            </div>
            <div class="col-md-4">
                <label class="form-label">Country Amount Decimals</label>
                <input type="number" class="form-control" min="0" max="8" value="2">
            </div>
            <div class="col-md-4">
                <label class="form-label">Price Decimals</label>
                <input type="number" class="form-control" min="0" max="8" value="4">
            </div>
            <div class="col-md-4">
                <label class="form-label">Quantity Decimals</label>
                <input type="number" class="form-control" min="0" max="4" value="0">
            </div>
            <div class="col-md-4">
                <label class="form-label">Exchange Rate Decimals</label>
                <input type="number" class="form-control" min="0" max="6" value="4">
            </div>
            <div class="col-md-4">
                <label class="form-label">Date Format</label>
                <select class="form-select">
                    <option>DD/MM/YYYY</option>
                    <option>MM/DD/YYYY</option>
                    <option>YYYY-MM-DD</option>
                </select>
            </div>
            <div class="col-md-4">
                <label class="form-label">Long Date Format</label>
                <select class="form-select">
                    <option>DD MMMM YYYY</option>
                    <option>MMMM DD, YYYY</option>
                    <option>YYYY年MM月DD日</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Finance Tab -->
    <div class="tab-pane fade" id="finance" role="tabpanel">
        <div class="row">
            <h6 class="mb-3">Currency Settings</h6>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Base Currency</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Local Currency</label>
                    <select class="form-select">
                        <option>SGD - Singapore Dollar</option>
                        <option>MYR - Malaysian Ringgit</option>
                        <option>IDR - Indonesian Rupiah</option>
                    </select>
                </div>
            </div>

            <!-- This div creates a line break to ensure GL Accounts Setting starts on the next line -->
            <div class="w-100"></div>

            <h6 class="mb-3">GL Accounts Setting</h6>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Exchange Gain/Loss GL</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <label class="form-label">Bank Charges GL</label>
                <select class="form-select">
                    <option>USD - US Dollar</option>
                    <option>EUR - Euro</option>
                    <option>SGD - Singapore Dollar</option>
                </select>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Profit/Loss GL</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Return Earing GL</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Sales GST GL</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Purchase GST GL</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Sales Define GL</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="mb-3">
                    <label class="form-label">Purchase Define GL</label>
                    <select class="form-select">
                        <option>USD - US Dollar</option>
                        <option>EUR - Euro</option>
                        <option>SGD - Singapore Dollar</option>
                    </select>
                </div>
            </div>
        </div>
    </div>


    <!-- Mandatory Tab -->
    <div class="tab-pane fade" id="mandatory" role="tabpanel">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Field Name</th>
                        <th>Mandatory</th>
                        <th>Default Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Customer</td>
                        <td><input type="checkbox" checked></td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>Due Date</td>
                        <td><input type="checkbox"></td>
                        <td><input type="date" class="form-control"></td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Visibility Tab -->
    <div class="tab-pane fade" id="visibility" role="tabpanel">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Field Name</th>
                        <th>Visibility</th>
                        <th>Default Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Customer</td>
                        <td><input type="checkbox" checked></td>
                        <td>-</td>
                    </tr>
                    <tr>
                        <td>Due Date</td>
                        <td><input type="checkbox" checked></td>
                        <td><input type="date" class="form-control"></td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Number Format Tab -->
    <div class="tab-pane fade" id="number-format" role="tabpanel">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-4">
                    <label class="form-label">Number Format Template</label>
                    <input type="text" class="form-control" value="#,##0.00">
                </div>
                <div class="mb-4">
                    <label class="form-label">Currency Format</label>
                    <input type="text" class="form-control" value="¤ #,##0.00">
                </div>
            </div>
            <div class="col-md-6">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Format Type</th>
                                <th>Example</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Decimal</td>
                                <td>1,234.56</td>
                            </tr>
                            <tr>
                                <td>Currency</td>
                                <td>$ 1,234.56</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- User Setting Tab -->
    <div class="tab-pane fade" id="user-setting" role="tabpanel">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>User</th>
                        <th>Access Level</th>
                        <th>Default View</th>
                        <th>Preferences</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>admin@company.com</td>
                        <td>
                            <select class="form-select">
                                <option>Full Access</option>
                                <option>Read Only</option>
                            </select>
                        </td>
                        <td><input type="text" class="form-control" value="Dashboard"></td>
                        <td><button class="btn btn-sm btn-outline-primary">Edit</button></td>
                    </tr>
                    <!-- Add more rows as needed -->
                </tbody>
            </table>
            <button class="btn btn-sm btn-primary mt-3">
                <i class="fas fa-plus me-2"></i>Add New User
            </button>
        </div>
    </div>
</div>