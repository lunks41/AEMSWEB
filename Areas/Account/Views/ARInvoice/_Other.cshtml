<!-- Other Tab -->
<div class="tab-pane fade" id="other" role="tabpanel">
    <div class="row g-3">
        <!-- Billing Information -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h6 class="mb-0">Billing Information</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="addressType" class="form-label">Address Type</label>
                        <select class="form-select" id="addressType">
                            <option>Primary</option>
                            <option>Secondary</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="billingName" class="form-label">Billing Name</label>
                        <input type="text" class="form-control" id="billingName" placeholder="Enter name">
                    </div>
                    <div class="mb-3">
                        <label for="addressLine1" class="form-label">Address Line 1</label>
                        <textarea class="form-control" id="addressLine1" rows="2" placeholder="Street address"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="addressLine2" class="form-label">Address Line 2</label>
                        <textarea class="form-control" id="addressLine2" rows="2" placeholder="Apartment/Suite"></textarea>
                    </div>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <label for="country" class="form-label">Country</label>
                            <select class="form-select" id="country">
                                <option>Singapore</option>
                                <option>Malaysia</option>
                                <option>Indonesia</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="postalCode" class="form-label">Postal Code</label>
                            <input type="text" class="form-control" id="postalCode" placeholder="e.g. 123456">
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contact Information -->
        <div class="col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white">
                    <h6 class="mb-0">Contact Information</h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="contactType" class="form-label">Contact Type</label>
                        <select class="form-select" id="contactType">
                            <option>Primary</option>
                            <option>Secondary</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" placeholder="name@example.com">
                    </div>
                    <div class="mb-3">
                        <label for="phoneNumber" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phoneNumber" placeholder="+65 1234 5678">
                    </div>
                    <div class="mb-3">
                        <label for="faxNumber" class="form-label">Fax Number</label>
                        <input type="text" class="form-control" id="faxNumber" placeholder="+65 1234 5678">
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="defaultContact">
                        <label class="form-check-label" for="defaultContact">
                            Set as default contact
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>