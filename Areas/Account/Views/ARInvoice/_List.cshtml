

<div class="modal fade" id="viewInvoiceListModal" tabindex="-1"
     aria-labelledby="viewInvoiceListModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewInvoiceListModalLabel">Invoice List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>

            <!-- Filter Section -->
            <div class="modal-body">
                <div class="filter-section bg-light p-3 rounded mb-4">
                    <div class="row g-3 align-items-center">
                        <!-- Search Box -->
                        <div class="col-md-auto">
                            <input type="text" id="invoiceSearch" class="form-control"
                                   placeholder="Search invoices..."
                                   onkeydown="handleEnterKey(event)">
                        </div>

                        <!-- Customer Dropdown -->
                        <div class="col-md-auto">
                            <select id="customerDropdown" class="form-select">
                                <option value="">All Customers</option>
                                <!-- Dynamically populated options -->
                            </select>
                        </div>

                        <!-- Date Range -->
                        <div class="col-md-auto">
                            <div class="d-flex align-items-center gap-2">
                                <input type="date" id="fromDate" class="form-control">
                                <span>to</span>
                                <input type="date" id="toDate" class="form-control">
                            </div>
                        </div>

                        <!-- All Data Checkbox -->
                        <div class="col-md-auto">
                            <div class="form-check d-flex align-items-center">
                                <input class="form-check-input" type="checkbox"
                                       id="isShowAll">
                                <label class="form-check-label ms-2" for="isShowAll">
                                    Is Show All
                                </label>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="col-md-auto">
                            <div class="d-flex gap-2">
                                <button type="button" class="btn btn-primary"
                                        onclick="loadInvoiceGrid()">
                                    <i class="bi bi-search"></i> Search
                                </button>
                                <button type="button" class="btn btn-secondary"
                                        onclick="clearInvoiceFilters()">
                                    <i class="bi bi-x-circle"></i> Clear
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Invoice Grid -->
                <div id="grid_invoice"></div>
            </div>
        </div>
    </div>
</div>