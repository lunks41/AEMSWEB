@{
    ViewData["Title"] = $"AR Invoice ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    <style>

        /* Ensure content fits the modal width */
        #addARInvoiceModal .modal-content {
            min-height: 80vh;
            display: flex;
            flex-direction: column;
        }

        #addARInvoiceModal .modal-body {
            flex: 1;
            overflow-y: auto;
        }
    </style>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>AR Invoice</h3>

                <!-- Action Row -->
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <form id="arInvoiceForm" class="needs-validation" novalidate>
                        <input type="hidden" id="invoiceId">

                        <!-- Pills Navigation -->
                        <ul class="nav nav-pills mb-4 border-bottom pb-2" id="invoicePills" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active" id="main-pill" data-bs-toggle="pill" data-bs-target="#main" type="button" role="tab">
                                    <i class="fas fa-file-invoice me-2"></i>Main
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="other-pill" data-bs-toggle="pill" data-bs-target="#other" type="button" role="tab">
                                    <i class="fas fa-info-circle me-2"></i>Other
                                </button>
                            </li>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="history-pill" data-bs-toggle="pill" data-bs-target="#history" type="button" role="tab">
                                    <i class="fas fa-history me-2"></i>History
                                </button>
                            </li>
                        </ul>
                        <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                            <div class="btn-group">
                                <button type="button" class="btn btn-primary" id="btnList">List</button>
                                <button type="button" class="btn btn-success" id="btnSave">Save</button>
                                <button type="button" class="btn btn-warning" id="btnReset">Reset</button>
                                <button type="button" class="btn btn-info" id="btnPrint">Print</button>
                                <button type="button" class="btn btn-secondary" id="btnClone">Clone</button>
                                <button type="button" class="btn btn-danger" id="btnDelete">Delete</button>
                                <button type="button" class="btn btn-dark" id="btnUnpost">Unpost</button>
                            </div>
                        </div>

                        <!-- Tab Contents -->
                        <div class="tab-content">
                            @await Html.PartialAsync("_Main")
                            @await Html.PartialAsync("_Other")
                            @await Html.PartialAsync("_History")
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section externalhtml {
    <div class="modal fade" id="confirmationModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmation</h5>
                </div>
                <div class="modal-body">
                    <p id="confirmationMessage"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                    <button type="button" class="btn btn-primary" id="confirmYes">Yes</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Confirmation handling
        let pendingAction = null;

        function showConfirmation(message, callback) {
            $('#confirmationMessage').text(message);
            pendingAction = callback;
            $('#confirmationModal').modal('show');
        }

        $('#confirmYes').click(function () {
            if (typeof pendingAction === 'function') {
                pendingAction();
            }
            $('#confirmationModal').modal('hide');
        });

        // Save button handler
        $('#btnSave').click(function () {
            showConfirmation('Do you want to save?', function () {
                // Actual save logic here
                $('#arInvoiceForm').submit();
            });
        });

        // Unpost button handler
        $('#btnUnpost').click(function () {
            showConfirmation('Do you want to unpost?', function () {
                // Actual unpost logic here
                console.log('Unposting...');
            });
        });

        // Other button handlers
        $('#btnReset').click(function () {
            $('#arInvoiceForm')[0].reset();
        });
    </script>
}