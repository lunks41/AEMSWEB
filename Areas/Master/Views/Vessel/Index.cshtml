@{
    ViewData["Title"] = $"Vessel ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Vessels</h3>

                <!-- Action Row -->
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <!-- Search Section -->
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div style="width: 150px;">
                            <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearSearch();">
                            <i class="mdi mdi-close"></i> Clear
                        </button>
                    </div>

                    <!-- Add Button -->
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addVesselModal" id="addrecord">
                            <i class="mdi mdi-plus me-1"></i> Add Vessel
                        </button>
                    </div>
                </div>
                <div id="grid"></div>
            </div>
        </div>
    </div>
</div>

@section externalhtml {
    <!-- Add/Edit Modal -->
    <div class="modal fade" id="addVesselModal" tabindex="-1" aria-labelledby="addVesselModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addVesselModalLabel">Vessel Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearForm();"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="vesselForm">
                        <input type="hidden" id="vesselId" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="vesselCode" class="form-label">Vessel Code <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="vesselCode" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="vesselName" class="form-label">Vessel Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="vesselName" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="vesselType" class="form-label">Vessel Type</label>
                                    <select id="vesselType" style="width: 100%"></select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="callSign" class="form-label">Call Sign</label>
                                    <input type="text" class="form-control" id="callSign">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="imoCode" class="form-label">IMO Code</label>
                                    <input type="text" class="form-control" id="imoCode">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="grt" class="form-label">GRT</label>
                                    <input type="text" class="form-control" id="grt">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="licenseNo" class="form-label">License No</label>
                                    <input type="text" class="form-control" id="licenseNo">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="flag" class="form-label">Flag</label>
                                    <select id="flag" style="width: 100%"></select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="remarks" class="form-label">Remarks</label>
                                    <textarea class="form-control" id="remarks" rows="2"></textarea>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isActive">
                                    <label class="form-check-label" for="isActive">Is Active</label>
                                </div>
                            </div>
                        </div>

                        <!-- Audit Fields -->
                        <div class="accordion mt-3" id="auditAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#auditCollapse">
                                        Audit Details
                                    </button>
                                </h2>
                                <div id="auditCollapse" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="form-label">Created By</label>
                                                <p id="createBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Created Date</label>
                                                <p id="createDate" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified By</label>
                                                <p id="editBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified Date</label>
                                                <p id="editDate" class="form-control-plaintext"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnDesignationClose" onclick="clearDesignationForm()">Close</button>
                    <button type="button" class="btn btn-primary" id="btnDesignationEdit">Edit</button>
                    <button type="button" class="btn btn-secondary" id="btnDesignationClear" onclick="clearDesignationForm()">Clear</button>
                    <button type="button" class="btn btn-primary" id="btnDesignationSave" onclick="saveDesignation()">Save</button>
                </div>
            </div>
        </div>
    </div>

    
}

@section Scripts {
    <script>
        let companyId = 0;
        $(document).ready(function () {
            companyId = getUrlParameter('companyId');
            $('#vesselCode, #vesselName').on('input', checkMandatoryFields);
            loadGrid();
            loadDropdowns();
            clearForm();
        });

        function loadGrid() {
            const search = $('#txtsearch').val();
            $('#grid').kendoGrid({
                dataSource: {
                    transport: {
                        read: {
                            url: `/Master/Vessel/List?companyId=${companyId}&searchString=${search}`,
                            dataType: "json"
                        }
                    },
                    schema: {
                        data: "data",
                        total: "total"
                    },
                    pageSize: 20
                },
                height: 550,
                pageable: true,
                columns: [
                    {
                        title: "Actions",
                        template: function (dataItem) {
                            return `
                                    <button class="btn btn-sm btn-primary" onclick="openModal('${dataItem.vesselId}', 'view')">
                                        <i class="mdi mdi-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-warning" onclick="openModal('${dataItem.vesselId}', 'edit')">
                                        <i class="mdi mdi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteVessel('${dataItem.vesselId}')">
                                        <i class="mdi mdi-delete"></i>
                                    </button>
                                `;
                        },
                        width: "150px"
                    },
                    { field: "vesselCode", title: "Code" },
                    { field: "vesselName", title: "Name" },
                    { field: "vesselType", title: "Type" },
                    { field: "callSign", title: "Call Sign" },
                    { field: "imoCode", title: "IMO Code" },
                    { field: "grt", title: "GRT" },
                    { field: "licenseNo", title: "License No" },
                    { field: "flag", title: "Flag" },
                    { field: "remarks", title: "Remarks" },
                    {
                        field: "isActive",
                        title: "Active",
                        template: '<input type="checkbox" #= isActive ? "checked" : "" # disabled />'
                    }
                ]
            });
        }

        function loadDropdowns() {
            // Vessel Type Dropdown
            $("#vesselType").kendoComboBox({
                dataTextField: "text",
                dataValueField: "value",
                dataSource: [
                    { text: "Cargo", value: "Cargo" },
                    { text: "Tanker", value: "Tanker" },
                    { text: "Passenger", value: "Passenger" },
                    { text: "Special", value: "Special" }
                ]
            });

            // Flag Dropdown
            $("#flag").kendoComboBox({
                dataTextField: "text",
                dataValueField: "value",
                dataSource: [
                    { text: "Indonesia", value: "ID" },
                    { text: "Singapore", value: "SG" },
                    { text: "Malaysia", value: "MY" },
                    { text: "Panama", value: "PA" }
                ]
            });
        }

        function openModal(id, mode) {
            $.get(`/Master/Vessel/GetById?vesselId=${id}&companyId=${companyId}`)
                .done(function (response) {
                    if (response.success) {
                        const data = response.data;
                        $('#vesselId').val(data.vesselId);
                        $('#vesselCode').val(data.vesselCode);
                        $('#vesselName').val(data.vesselName);
                        $('#callSign').val(data.callSign);
                        $('#imoCode').val(data.imoCode);
                        $('#grt').val(data.grt);
                        $('#licenseNo').val(data.licenseNo);
                        $('#remarks').val(data.remarks);
                        $('#isActive').prop('checked', data.isActive);

                        // Set dropdown values
                        $("#vesselType").data("kendoComboBox").value(data.vesselType);
                        $("#flag").data("kendoComboBox").value(data.flag);

                        // Audit fields
                        $('#createBy').text(data.createBy || 'N/A');
                        $('#createDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : 'N/A');
                        $('#editBy').text(data.editBy || 'N/A');
                        $('#editDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : 'N/A');

                        setMode(mode);
                        $('#addVesselModal').modal('show');
                    }
                });
        }

        function setMode(mode) {
            const isView = mode === 'view';
            $('#vesselCode').prop('readonly', isView);
            $('#vesselName').prop('readonly', isView);
            $('#callSign').prop('readonly', isView);
            $('#imoCode').prop('readonly', isView);
            $('#grt').prop('readonly', isView);
            $('#licenseNo').prop('readonly', isView);
            $('#remarks').prop('readonly', isView);
            $('#isActive').prop('disabled', isView);
            $("#vesselType").data("kendoComboBox").enable(!isView);
            $("#flag").data("kendoComboBox").enable(!isView);
            $('#btnSave').toggle(!isView);
            $('#btnEdit').toggle(isView);
        }

        function deleteVessel(id) {
            $('#confirmationModal').modal('show');
            $('#confirmDelete').off('click').click(function () {
                $.ajax({
                    url: `/Master/Vessel/Delete?vesselId=${id}&companyId=${companyId}`,
                    type: "DELETE",
                    success: function (response) {
                        if (response.success) {
                            loadGrid();
                            $('#confirmationModal').modal('hide');
                        }
                    }
                });
            });
        }

        function saveVessel() {
            const data = {
                VesselId: $('#vesselId').val() || 0,
                VesselCode: $('#vesselCode').val(),
                VesselName: $('#vesselName').val(),
                CallSign: $('#callSign').val(),
                IMOCode: $('#imoCode').val(),
                GRT: $('#grt').val(),
                LicenseNo: $('#licenseNo').val(),
                VesselType: $("#vesselType").data("kendoComboBox").value(),
                Flag: $("#flag").data("kendoComboBox").value(),
                Remarks: $('#remarks').val(),
                IsActive: $('#isActive').prop('checked'),
                CompanyId: companyId
            };

            if (!data.VesselCode || !data.VesselName) {
                alert('Vessel Code and Name are required!');
                return;
            }

            $.post("/Master/Vessel/Save", data)
                .done(function (response) {
                    if (response.success) {
                        $('#addVesselModal').modal('hide');
                        loadGrid();
                        clearForm();
                    }
                });
        }

        function clearForm() {
            $('#vesselForm')[0].reset();
            $('#vesselId').val(0);
            $("#vesselType").data("kendoComboBox").value('');
            $("#flag").data("kendoComboBox").value('');
            $('#btnSave').prop('disabled', true);
        }

        function checkMandatoryFields() {
            const isValid = $('#vesselCode').val().trim() && $('#vesselName').val().trim();
            $('#btnSave').prop('disabled', !isValid);
        }
    </script>
}