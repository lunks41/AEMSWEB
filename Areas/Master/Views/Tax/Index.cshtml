@{
    ViewData["Title"] = $"Tax Management ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Taxes</h3>

                <!-- Action Row -->
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <!-- Search Section -->
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div class="flex-grow-1" style="min-width: 200px;">
                            <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadGrid();">
                            <i class="mdi mdi-magnify"></i>Search
                        </button>
                    </div>

                    <!-- Add Button -->
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addTaxModal" id="addrecord">
                            <i class="mdi mdi-plus me-1"></i> Add Tax
                        </button>
                    </div>
                </div>
                <div id="grid"></div>
            </div>
        </div>
    </div>
</div>

@section externalhtml {
    <!-- Add/Edit Modal -->
    <div class="modal fade" id="addTaxModal" tabindex="-1" aria-labelledby="addTaxModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTaxModalLabel">Tax Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearForm();"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="taxForm">
                        <input type="hidden" id="taxId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="taxCode" class="form-label">Tax Code <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="taxCode" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="taxName" class="form-label">Tax Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="taxName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="cmbTaxCategory" class="form-label">Tax Category <span class="text-danger">*</span></label>
                                    <select id="cmbTaxCategory" style="width: 100%"></select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="remarks" class="form-label">Remarks</label>
                                    <textarea class="form-control" id="remarks" rows="2"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isActive">
                                    <label class="form-check-label" for="isActive">Is Active</label>
                                </div>
                            </div>
                        </div>

                        <!-- Audit Fields -->
                        <div class="accordion mt-3" id="auditAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#auditCollapse">
                                        Audit Details
                                    </button>
                                </h2>
                                <div id="auditCollapse" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="form-label">Created By</label>
                                                <p id="createBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Created Date</label>
                                                <p id="createDate" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified By</label>
                                                <p id="editBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified Date</label>
                                                <p id="editDate" class="form-control-plaintext"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearForm()">Close</button>
                    <button type="button" class="btn btn-primary" id="btnEdit">Edit</button>
                    <button type="button" class="btn btn-secondary" onclick="clearForm()">Clear</button>
                    <button type="button" class="btn btn-primary" id="btnSave" onclick="saveTax()">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this tax?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
    let companyId = 0;
    $(document).ready(function () {
        companyId = getUrlParameter('companyId');
        $('#taxCode, #taxName').on('input', checkMandatoryFields);
        loadGrid();
        loadTaxCategories();
        clearForm();
    });

    function loadGrid() {
        const search = $('#txtsearch').val();
        $('#grid').kendoGrid({
            dataSource: {
                transport: {
                    read: {
                        url: `/Master/Tax/List?companyId=${companyId}&searchString=${search}`,
                        dataType: "json"
                    }
                },
                schema: {
                    data: "data",
                    total: "total"
                },
                pageSize: 20
            },
            height: 550,
            pageable: true,
            columns: [
                {
                    title: "Actions",
                    template: function(dataItem) {
                        return `
                            <button class="btn btn-sm btn-primary" onclick="openModal('${dataItem.taxId}', 'view')">
                                <i class="mdi mdi-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-warning" onclick="openModal('${dataItem.taxId}', 'edit')">
                                <i class="mdi mdi-pencil"></i>
                            </button>
                            <button class="btn btn-sm btn-danger" onclick="deleteTax('${dataItem.taxId}')">
                                <i class="mdi mdi-delete"></i>
                            </button>
                        `;
                    },
                    width: "150px"
                },
                { field: "taxCode", title: "Code" },
                { field: "taxName", title: "Name" },
                { field: "taxCategoryName", title: "Category" },
                { field: "remarks", title: "Remarks" },
                {
                    field: "isActive",
                    title: "Active",
                    template: '<input type="checkbox" #= isActive ? "checked" : "" # disabled />'
                }
            ]
        });
    }

    function loadTaxCategories() {
        $("#cmbTaxCategory").kendoComboBox({
            dataTextField: "taxCategoryName",
            dataValueField: "taxCategoryId",
            dataSource: {
                transport: {
                    read: {
                        url: `/Lookup/GetTaxCategoryLookup?companyId=${companyId}`,
                        dataType: "json"
                    }
                }
            }
        });
    }

    function openModal(id, mode) {
        $.get(`/Master/Tax/GetById?taxId=${id}&companyId=${companyId}`)
            .done(function(response) {
                if (response.success) {
                    const data = response.data;
                    $('#taxId').val(data.taxId);
                    $('#taxCode').val(data.taxCode);
                    $('#taxName').val(data.taxName);
                    $('#remarks').val(data.remarks);
                    $('#isActive').prop('checked', data.isActive);

                    // Set tax category
                    const taxCategory = $("#cmbTaxCategory").data("kendoComboBox");
                    taxCategory.value(data.taxCategoryId);
                    taxCategory.text(data.taxCategoryName);

                    // Audit fields
                    $('#createBy').text(data.createBy || 'N/A');
                    $('#createDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : 'N/A');
                    $('#editBy').text(data.editBy || 'N/A');
                    $('#editDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : 'N/A');

                    setMode(mode);
                    $('#addTaxModal').modal('show');
                }
            });
    }

    function setMode(mode) {
        const isView = mode === 'view';
        $('#taxCode').prop('readonly', isView);
        $('#taxName').prop('readonly', isView);
        $('#remarks').prop('readonly', isView);
        $('#isActive').prop('disabled', isView);
        $("#cmbTaxCategory").data("kendoComboBox").enable(!isView);
        $('#btnSave').toggle(!isView);
        $('#btnEdit').toggle(isView);
    }

    function deleteTax(id) {
        $('#confirmationModal').modal('show');
        $('#confirmDelete').off('click').click(function() {
            $.ajax({
                url: `/Master/Tax/Delete?taxId=${id}&companyId=${companyId}`,
                type: "DELETE",
                success: function(response) {
                    if (response.success) {
                        loadGrid();
                        $('#confirmationModal').modal('hide');
                    }
                }
            });
        });
    }

    function saveTax() {
        const data = {
            TaxId: $('#taxId').val() || 0,
            TaxCode: $('#taxCode').val(),
            TaxName: $('#taxName').val(),
            TaxCategoryId: $("#cmbTaxCategory").data("kendoComboBox").value(),
            Remarks: $('#remarks').val(),
            IsActive: $('#isActive').prop('checked'),
            CompanyId: companyId
        };

        if (!data.TaxCode || !data.TaxName || !data.TaxCategoryId) {
            alert('Tax Code, Name, and Category are required!');
            return;
        }

        $.post("/Master/Tax/Save", data)
            .done(function(response) {
                if (response.success) {
                    $('#addTaxModal').modal('hide');
                    loadGrid();
                    clearForm();
                }
            });
    }

    function clearForm() {
        $('#taxForm')[0].reset();
        $('#taxId').val(0);
        $("#cmbTaxCategory").data("kendoComboBox").value('');
        $('#btnSave').prop('disabled', true);
    }

    function checkMandatoryFields() {
        const isValid = $('#taxCode').val().trim() && $('#taxName').val().trim();
        $('#btnSave').prop('disabled', !isValid);
    }
    </script>
}