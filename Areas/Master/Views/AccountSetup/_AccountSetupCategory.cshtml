<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Order Type Category</h3>

                <!-- Action Row -->
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <!-- Search Section -->
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div style="width: 150px;">
                            <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                        </div>
                        <button type="button" class="btn btn-primary btn-sm" onclick="loadAccSetupCategoryGrid();">
                            <span class="material-symbols-outlined">search</span>
                        </button>
                        <button type="button" class="btn btn-secondary btn-sm" onclick="clearSearch();">
                            <span class="material-symbols-outlined">close</span>
                        </button>
                    </div>

                    <!-- Add Button -->
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success btn-sm" id="refreshGrid" onclick="loadAccSetupCategoryGrid();">
                            <span class="material-symbols-outlined">refresh</span>
                        </button>

                        <button type="button" class="btn btn-success btn-sm" data-bs-toggle="modal" data-bs-target="#addAccSetupCategoryModal" id="addAccSetupCategoryrecord">
                            <span class="material-symbols-outlined">add</span>
                        </button>
                    </div>
                </div>
                <div id="gridAccSetupCategory"></div>
            </div>
        </div>
    </div>
</div>

<!-- Add/Edit Modal -->
<div class="modal fade" id="addAccSetupCategoryModal" tabindex="-1" aria-labelledby="addAccSetupCategoryModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAccSetupCategoryModalLabel">Add/Edit Order Type Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearAccSetupCategoryForm();"></button>
            </div>
            <div class="modal-body p-4">
                <form id="accSetupCategoryForm">
                    <input type="hidden" id="accSetupCategoryId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="accSetupCategoryCode" class="form-label">Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="accSetupCategoryCode" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="accSetupCategoryName" class="form-label">Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="accSetupCategoryName" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="accSetupCategoryremarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="accSetupCategoryremarks" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="accSetupCategoryisActive">
                                <label class="form-check-label" for="accSetupCategoryisActive">Is Active</label>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Fields -->
                    <div class="accordion mt-3" id="auditAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#auditCollapse">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="auditCollapse" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="accSetupCategorycreateBy" class="form-label">Created By</label>
                                            <p id="accSetupCategorycreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="accSetupCategorycreateDate" class="form-label">Created Date</label>
                                            <p id="accSetupCategorycreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="accSetupCategoryeditBy" class="form-label">Modified By</label>
                                            <p id="accSetupCategoryeditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="accSetupCategoryeditDate" class="form-label">Modified Date</label>
                                            <p id="accSetupCategoryeditDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnAccSetupCategoryClose" onclick="clearAccSetupCategoryForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnAccSetupCategoryEdit">Edit</button>
                <button type="button" class="btn btn-secondary" id="btnAccSetupCategoryClear" onclick="clearAccSetupCategoryForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnAccSetupCategorySave" onclick="saveAccSetupCategory()">Save</button>
            </div>
        </div>
    </div>
</div>

<script>

        function initializeAccSetupCategoryForm() {
            clearAccSetupCategoryForm();
            $('#accSetupCategoryisActive').prop('checked', true);
        }

        function clearAccSetupCategoryForm() {
            $('#accSetupCategoryForm')[0].reset();

            $('#accSetupCategoryId').val(0);
            $('#accSetupCategorycreateBy').text('');
            $('#accSetupCategorycreateDate').text('');
            $('#accSetupCategoryeditBy').text('');
            $('#accSetupCategoryeditDate').text('');

            // Reset readonly and disabled states
            $('#accSetupCategoryCode, #accSetupCategoryName, #accSetupCategoryremarks').prop('readonly', false);
            $('#accSetupCategoryisActive').prop('disabled', false);

            $('#accSetupCategoryisActive').prop('checked', true);
            $('#btnAccSetupCategorySave').prop('disabled', false);
            $('#btnAccSetupCategorySave').show();
            $('#btnAccSetupCategoryClear').show();
            $('#btnAccSetupCategoryEdit').hide();

        }

        function handleEnterKey(event) {
            if (event.key === 'Enter') loadAccSetupCategoryGrid();
        }

        function clearSearch() {
            $('#txtsearch').val('');
            loadAccSetupCategoryGrid();
        }

        function checkAccSetupCategoryMandatoryFields() {
            let isValid = $('#accSetupCategoryCode').val().trim() && $('#accSetupCategoryName').val().trim();
            $('#btnAccSetupCategorySave').prop('disabled', !isValid);

            // Add visual feedback
            $('#accSetupCategoryCode, #accSetupCategoryName').toggleClass('is-invalid', !isValid);
        }

        function loadAccSetupCategoryGrid() {
            let searchString = $('#txtsearch').val();
            let url = '@Url.Action("AccountSetupCategoryList", "AccountSetup", new { area = "Master" })';
            let columns = [
                {
                    title: "Actions",
                    width: "100px",
                    template: function (dataItem) {
                        let buttons = ` <button class="ps-0 border-0 bg-transparent" onclick="openAccSetupCategoryModal('${dataItem.accSetupCategoryId}', 'view')">
                        <i class="material-symbols-outlined text-primary">visibility</i></button>`;

                        if (permissions.canEdit) {
                            buttons += `<button class="ps-0 border-0 bg-transparent" onclick="openAccSetupCategoryModal('${dataItem.accSetupCategoryId}', 'edit')">
                        <i class="material-symbols-outlined text-warning">edit</i></button>`;
                        }

                        if (permissions.canDelete) {
                            buttons += `<button class="ps-0 border-0 bg-transparent" onclick="deleteAccSetupCategory('${dataItem.accSetupCategoryId}')">
                        <i class="material-symbols-outlined text-danger">delete</i></button>`;
                        }
                        return buttons;
                    }
                },
                { field: "accSetupCategoryCode", title: "Code" },
                { field: "accSetupCategoryName", title: "Name" },
                { field: "remarks", title: "Remarks" },
                { field: "isActive", title: "Active", template: '<input type="checkbox" #= isActive ? "checked" : "" # disabled />' }
            ];

            let grid = $("#gridAccSetupCategory").data("kendoGrid");
            if (grid) {

                grid.dataSource.read({ searchString: searchString, companyId: companyId });
            } else {
                // Initialize grid if it doesn’t exist
                initializeKendoGrid("gridAccSetupCategory", url, { searchString, companyId }, columns);
            }
        }

        function openAccSetupCategoryModal(id, mode) {
            const $modal = $('#addAccSetupCategoryModal');
            $modal.find('.modal-content').append('<div class="modal-overlay"><div class="spinner"></div></div>');
            $.get('@Url.Action("GetAccountSetupCategoryById", "AccountSetup", new { area = "Master" })', { accSetupCategoryId: id, companyId })
                .done(function (response) {
                    if (response.success) {
                        populateAccSetupCategoryModalFields(response.data);
                        setAccSetupCategoryMode(mode);
                        $('#addAccSetupCategoryModal').modal('show');
                    }
                })
                .always(() => $modal.find('.modal-overlay').remove());
        }

    function populateAccSetupCategoryModalFields(data) {
        debugger;
        $('#accSetupCategoryId').val(data.accSetupCategoryId);
        $('#accSetupCategoryCode').val(data.accSetupCategoryCode);
        $('#accSetupCategoryName').val(data.accSetupCategoryName);
        $('#accSetupCategoryremarks').val(data.remarks);
        $('#accSetupCategoryisActive').prop('checked', data.isActive);

        $('#accSetupCategorycreateBy').text(data.createBy || "N/A");
        $('#accSetupCategorycreateDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : "N/A");
        $('#accSetupCategoryeditBy').text(data.editBy || "N/A");
        $('#accSetupCategoryeditDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : "N/A");

        checkAccSetupCategoryMandatoryFields();
    }

        function setAccSetupCategoryMode(mode) {
            const isView = mode === 'view';
            const canEdit = permissions.canEdit && !isView;

            $('#accSetupCategoryCode, #accSetupCategoryName,  #accSetupCategoryremarks').prop('readonly', !canEdit);
            $('#accSetupCategoryisActive').prop('disabled', !canEdit);
            $('#btnAccSetupCategorySave').toggle(canEdit);
            $('#btnAccSetupCategoryEdit').toggle(isView && permissions.canEdit);
            $('#btnAccSetupCategoryClose').show();
            $('#btnAccSetupCategoryClear').hide();
            $('#btnClear').hide();
        }

        function deleteAccSetupCategory(id) {
            showDeleteModal("Are you sure you want to delete this records?", function () {
                $.ajax({
                    url: '@Url.Action("DeleteAccountSetupCategory", "AccountSetup", new { area = "Master" })',
                    type: "DELETE",
                    data: { accSetupCategoryId: id, companyId: companyId },
                    success: function (response) {
                        if (response.success) {
                            loadAccSetupCategoryGrid();
                            $('#confirmationModal').modal('hide');
                        }
                    }
                });
            });
        }

        function saveAccSetupCategory() {
            let accSetupCategoryData = {
                AccSetupCategoryId: parseInt($('#accSetupCategoryId').val()) || 0,
                AccSetupCategoryCode: $('#accSetupCategoryCode').val().trim(),
                AccSetupCategoryName: $('#accSetupCategoryName').val().trim(),
                Remarks: $('#accSetupCategoryremarks').val(),
                IsActive: $('#accSetupCategoryisActive').prop('checked')
            };

            console.log("accSetupCategory Data : " + accSetupCategoryData);

            if (!accSetupCategoryData.AccSetupCategoryCode || !accSetupCategoryData.AccSetupCategoryName) {
                alert('Code and Name are required!');
                return;
            }

            $.ajax({
                url: '@Url.Action("SaveAccountSetupCategory", "AccountSetup", new { area = "Master" })',
                type: "POST",
                data: JSON.stringify({ accountSetupCategory: accSetupCategoryData, companyId }),
                contentType: "application/json",
                success: function (response) {
                    if (response.success) {
                        debugger;
                        loadAccSetupCategoryGrid();
                        clearAccSetupCategoryForm();
                        $('#addAccSetupCategoryModal').modal('hide');
                    } else {
                        alert(response.message || "Failed to save account group.");
                    }
                },
                error: function (xhr) {
                    alert("Error: " + (xhr.responseJSON?.message || "An unexpected error occurred"));
                }
            });
        }
</script>