@{
    ViewData["Title"] = $"Account Setup ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Account Setup</h3>

                <!-- Nav-Pills Navigation -->
                <ul class="nav nav-pills mb-3" id="accountPills" role="tablist">
                    <li class="nav-item" role="presentation">
                        <button class="nav-link active" id="account-setup-pill" data-bs-toggle="pill" data-bs-target="#account-setup" type="button" role="tab" aria-controls="account-setup" aria-selected="true">
                            Account Setup
                        </button>
                    </li>
                    <li class="nav-item" role="presentation">
                        <button class="nav-link" id="category-pill" data-bs-toggle="pill" data-bs-target="#category" type="button" role="tab" aria-controls="category" aria-selected="false">
                            Category
                        </button>
                    </li>
                </ul>

                <!-- Nav-Pills Content -->
                <div class="tab-content" id="accountPillsContent">
                    <!-- Account Setup Tab -->
                    <div class="tab-pane fade show active" id="account-setup" role="tabpanel" aria-labelledby="account-setup-pill">
                        <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                            <!-- Search Section -->
                            <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                                <div style="width: 150px;">
                                    <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                                </div>
                                <button type="button" class="btn btn-primary" onclick="loadGrid();">
                                    <i class="mdi mdi-magnify"></i> Search
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="clearSearch();">
                                    <i class="mdi mdi-close"></i> Clear
                                </button>
                            </div>

                            <!-- Add Button -->
                            <div class="ms-auto">
                                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addAccountSetupModal" id="addrecord">
                                    <i class="mdi mdi-plus me-1"></i> Add
                                </button>
                            </div>
                        </div>
                        <div id="grid"></div>
                    </div>

                    <!-- Category Tab -->
                    <div class="tab-pane fade" id="category" role="tabpanel" aria-labelledby="category-pill">
                        <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                            <!-- Category Actions -->
                            <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                                <div style="width: 150px;">
                                    <input type="text" id="categorySearch" class="form-control" placeholder="Search Category..." onkeydown="handleCategorySearch(event)">
                                </div>
                                <button type="button" class="btn btn-primary" onclick="loadCategoryGrid();">
                                    <i class="mdi mdi-magnify"></i> Search
                                </button>
                                <button type="button" class="btn btn-secondary" onclick="clearCategorySearch();">
                                    <i class="mdi mdi-close"></i> Clear
                                </button>
                            </div>

                            <!-- Add Category Button -->
                            <div class="ms-auto">
                                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addCategoryModal" id="addCategory">
                                    <i class="mdi mdi-plus me-1"></i> Add Category
                                </button>
                            </div>
                        </div>
                        <div id="categoryGrid"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section externalhtml {
    <!-- Add/Edit Modal -->
    <div class="modal fade" id="addAccountSetupModal" tabindex="-1" aria-labelledby="addAccountSetupModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addAccountSetupModalLabel">Add Account Setup</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearForm();"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="accountSetupForm">
                        <input type="hidden" id="accSetupId" />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="accSetupCode" class="form-label">Code <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="accSetupCode" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="accSetupName" class="form-label">Name <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="accSetupName" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="cmb_accsetupcategory" class="form-label">Category <span class="text-danger">*</span></label>
                                    <select id="cmb_accsetupcategory" style="width: 100%"></select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="remarks" class="form-label">Remarks</label>
                                    <textarea class="form-control" id="remarks" rows="2"></textarea>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isActive">
                                    <label class="form-check-label" for="isActive">Is Active</label>
                                </div>
                            </div>
                        </div>

                        <!-- Audit Fields -->
                        <div class="accordion mt-3" id="auditAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#auditCollapse">
                                        Audit Details
                                    </button>
                                </h2>
                                <div id="auditCollapse" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="form-label">Created By</label>
                                                <p id="createBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Created Date</label>
                                                <p id="createDate" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified By</label>
                                                <p id="editBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified Date</label>
                                                <p id="editDate" class="form-control-plaintext"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearForm()">Close</button>
                    <button type="button" class="btn btn-primary" id="btnEdit">Edit</button>
                    <button type="button" class="btn btn-secondary" onclick="clearForm()">Clear</button>
                    <button type="button" class="btn btn-primary" id="btnSave" onclick="saveAccountSetup()">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this account setup?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        let companyId = 0;
        $(document).ready(function () {
            companyId = getUrlParameter('companyId');
            $('#accSetupCode, #accSetupName').on('input', checkMandatoryFields);
            Refresh();
            loadGrid();
            clearForm();
            setDefaultValues();
            window.clearForm = clearForm;
        });

        function setDefaultValues() {
            clearForm();
            document.getElementById('isActive').checked = true;
            document.getElementById('btnSave').disabled = false;
        }

        function handleEnterKey(event) {
            if (event.key === 'Enter') {
                loadGrid();
            }
        }
        function clearSearch() {
            $('#txtsearch').val('');
            loadGrid();
        }

        function loadGrid() {
            let searchString = $('#txtsearch').val();
            const gridname = 'grid';
            const url = '@Url.Action("List", "AccountSetup", new { area = "Master" })';
            const columns = [
                {
                    title: "Actions",
                    width: "150px",
                    template: function (dataItem) {
                        return `
                                <button class="btn btn-sm btn-primary" onclick="openModal('${dataItem.accSetupId}', 'view')">
                                    <i class="mdi mdi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-warning" onclick="openModal('${dataItem.accSetupId}', 'edit')">
                                    <i class="mdi mdi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger" onclick="deleteAccountSetup('${dataItem.accSetupId}')">
                                    <i class="mdi mdi-delete"></i>
                                </button>
                            `;
                    },
                    width: "150px"
                },
                { field: "accSetupCode", title: "Code" },
                { field: "accSetupName", title: "Name" },
                { field: "accSetupCategoryName", title: "Category" },
                { field: "remarks", title: "Remarks" },
                {
                    field: "isActive",
                    title: "Active",
                    template: '<input type="checkbox" #= isActive ? "checked" : "" # disabled />'
                }
            ];

            const params = { selectedTab: gridname, searchString: searchString, companyId: companyId };
            initializeKendoGrid(gridname, url, params, columns);
        }

        function openModal(id, mode) {
            $.get(`/Master/AccountSetup/GetById?accSetupId=${id}&companyId=${companyId}`)
                .done(function (response) {
                    if (response.success) {
                        const data = response.data;
                        populateModalFields(data)
                        setMode(mode);
                        $('#addAccountSetupModal').modal('show');
                    }
                });
        }

        function populateModalFields(data) {
            debugger;
            $('#accSetupId').val(data.accSetupId);
            $('#accSetupCode').val(data.accSetupCode);
            $('#accSetupName').val(data.accSetupName);
            $('#remarks').val(data.remarks);
            $('#isActive').prop('checked', data.isActive);
            $("#cmb_accsetupcategory").data("kendoComboBox").value(data.accSetupCategoryId > 0 ? data.accSetupCategoryId : '');

            // Load Details History (always read-only)
            $('#createBy').text(data.createBy || "N/A");
            $('#createDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : "N/A");
            $('#editBy').text(data.editBy || "N/A");
            $('#editDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : "N/A");

            checkMandatoryFields();
        }

        function setMode(mode) {
            const isView = mode === 'view';
            $('#accSetupCode').prop('readonly', isView);
            $('#accSetupName').prop('readonly', isView);
            $('#remarks').prop('readonly', isView);
            $('#isActive').prop('disabled', isView);
            $("#cmb_accsetupcategory").data("kendoComboBox").enable(!isView);
            $('#btnSave').toggle(!isView);
            $('#btnEdit').toggle(isView);
        }

        $('#btnEdit').on('click', function () {
            setMode("edit");
        });

        $('#btnClose').on('click', function () {
            $('#addAccountSetupModal').modal('hide');
        });

        $('#addrecord').on('click', function () {
            clearForm();
            setDefaultValues();
            $('#btnClose').show();
            $('#btnClear').show();
            $('#btnSave').show();
            $('#btnEdit').hide();
        });

        function deleteAccountSetup(id) {
            $('#confirmationModal').modal('show');
            $('#confirmDelete').off('click').click(function () {
                $.ajax({
                    url: `/Master/AccountSetup/Delete?accSetupId=${id}&companyId=${companyId}`,
                    type: "DELETE",
                    success: function (response) {
                        if (response.success) {
                            loadGrid();
                            $('#confirmationModal').modal('hide');
                        }
                    }
                });
            });
        }

        function saveAccountSetup() {

            const data = {
                AccSetupId: $('#accSetupId').val() || 0,
                AccSetupCode: $('#accSetupCode').val(),
                AccSetupName: $('#accSetupName').val(),
                AccSetupCategoryId: parseInt($('#cmb_accsetupcategory').data('kendoComboBox').value()) || 0,
                Remarks: $('#remarks').val(),
                IsActive: $('#isActive').prop('checked'),
                CompanyId: companyId
            };

            if (!data.AccSetupCode || !data.AccSetupName || !data.AccSetupCategoryId) {
                alert('Code, Name, and Category are required!');
                return;
            }

            $.ajax({
                url: "/Master/AccountSetup/Save",
                type: "POST",
                data: JSON.stringify({ accountSetup: data, companyId: companyId }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response.success) {
                        $('#addAccountSetupModal').modal('hide');
                        loadGrid();
                        clearForm();
                    }
                },
                error: function (error) {
                    alert("Error: " + error.responseText);
                }
            });
        }

        function clearForm() {
            $('#accountSetupForm')[0].reset();
            $('#accSetupId').val(0);
            $("#cmb_accsetupcategory").data("kendoComboBox").value('');
            $('#btnSave').prop('disabled', true);
        }

        function checkMandatoryFields() {
            const isValid = $('#accSetupCode').val().trim() && $('#accSetupName').val().trim();
            $('#btnSave').prop('disabled', !isValid);
        }

            function Refresh() {

// URLs with companyId appended as a query parameter
const accountTypeUrl = '@Url.Action("GetAccountSetupCategoryLookup", "Lookup", new { area = "" })?companyId=' + companyId;
                BindComboBox(accountTypeUrl, "cmb_accsetupcategory", "accSetupCategoryName", "accSetupCategoryId");

   }

   function SelectedDropdown(DrpdwnName) {

   }

        function OnSelectDropdown(dataItem, DrpdwnName) {

        }
    </script>
}