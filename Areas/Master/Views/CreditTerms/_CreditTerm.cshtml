<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Credit Terms</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div class="flex-grow-1" style="min-width: 200px;">
                            <input type="text" id="txtCreditTermSearch" class="form-control" placeholder="Search terms...">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadCreditTermGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#creditTermModal">
                            <i class="mdi mdi-plus me-1"></i> Add Credit Term
                        </button>
                    </div>
                </div>
                <div id="creditTermGrid"></div>
            </div>
        </div>
    </div>
</div>

<!-- Credit Term Modal -->
<div class="modal fade" id="creditTermModal" tabindex="-1" aria-labelledby="creditTermModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="creditTermModalLabel">Credit Term Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearCreditTermForm()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="creditTermForm">
                    <input type="hidden" id="CreditTermId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="CompanyId" class="form-label">Company <span class="text-danger">*</span></label>
                                <select id="CompanyId" class="form-select" required>
                                    <!-- Populate via API -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="CreditTermCode" class="form-label">Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="CreditTermCode" maxlength="10" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="CreditTermName" class="form-label">Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="CreditTermName" maxlength="100" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="NoDays" class="form-label">Number of Days <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="NoDays" min="1" max="365" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="Remarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="Remarks" rows="2" maxlength="500"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="IsActive">
                                <label class="form-check-label" for="IsActive">Is Active</label>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="creditTermAudit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#creditTermAuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="creditTermAuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="createBy" class="form-label">Created By</label>
                                            <p id="createBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="createDate" class="form-label">Created Date</label>
                                            <p id="createDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="editBy" class="form-label">Modified By</label>
                                            <p id="editBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="editDate" class="form-label">Modified Date</label>
                                            <p id="editDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearCreditTermForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnCreditTermEdit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearCreditTermForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnCreditTermSave" onclick="saveCreditTerm()">Save</button>
            </div>
        </div>
    </div>
</div>