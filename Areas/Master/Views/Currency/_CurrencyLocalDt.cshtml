<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Local Currency Rates</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div class="flex-grow-1" style="min-width: 200px;">
                            <input type="text" id="txtLocalCurrencySearch" class="form-control" placeholder="Search local rates...">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadLocalCurrencyGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#localCurrencyModal">
                            <i class="mdi mdi-plus me-1"></i> Add Local Rate
                        </button>
                    </div>
                </div>
                <div id="localCurrencyGrid"></div>
            </div>
        </div>
    </div>
</div>

<!-- Local Currency Modal -->
<div class="modal fade" id="localCurrencyModal" tabindex="-1" aria-labelledby="localCurrencyModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="localCurrencyModalLabel">Local Rate Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearLocalCurrencyForm()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="localCurrencyForm">
                    <input type="hidden" id="LocalCurrencyId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="cmbLocalCurrency" class="form-label">Currency <span class="text-danger">*</span></label>
                                <select id="cmbLocalCurrency" class="form-select" required>
                                    <!-- Populate via API -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="LocalExhRate" class="form-label">Exchange Rate <span class="text-danger">*</span></label>
                                <input type="number" step="0.0000000001" class="form-control" id="LocalExhRate" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="LocalValidFrom" class="form-label">Valid From <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="LocalValidFrom" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="IsActiveLocal">
                                <label class="form-check-label" for="IsActiveLocal">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="localCurrencyAudit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#localCurrencyAuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="localCurrencyAuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="CreateByLocal" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="CreateDateLocal" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="EditByLocal" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="EditDateLocal" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearLocalCurrencyForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnLocalCurrencyEdit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearLocalCurrencyForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnLocalCurrencySave" onclick="saveLocalCurrency()">Save</button>
            </div>
        </div>
    </div>
</div>