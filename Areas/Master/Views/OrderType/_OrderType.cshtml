<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Order Types</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div style="width: 150px;">
                            <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearSearch();">
                            <i class="mdi mdi-close"></i> Clear
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#orderTypeModal">
                            <i class="mdi mdi-plus me-1"></i> Add Order Type
                        </button>
                    </div>
                </div>
                <div id="orderTypeGrid"></div>
            </div>
        </div>
    </div>
</div>

<!-- Order Type Modal -->
<div class="modal fade" id="orderTypeModal" tabindex="-1" aria-labelledby="orderTypeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderTypeModalLabel">Order Type Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearOrderTypeForm()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="orderTypeForm">
                    <input type="hidden" id="OrderTypeId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="OrderTypeCode" class="form-label">Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="OrderTypeCode" maxlength="10" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="OrderTypeName" class="form-label">Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="OrderTypeName" maxlength="100" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="OrderTypeCategoryId" class="form-label">Category <span class="text-danger">*</span></label>
                                <select id="OrderTypeCategoryId" class="form-select" required>
                                    <!-- Populate via API -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="OrderTypeRemarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="OrderTypeRemarks" rows="2" maxlength="500"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="OrderTypeIsActive">
                                <label class="form-check-label" for="OrderTypeIsActive">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="orderTypeAudit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#orderTypeAuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="orderTypeAuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="OrderTypeCreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="OrderTypeCreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="OrderTypeEditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="OrderTypeEditDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearOrderTypeForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnOrderTypeEdit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearOrderTypeForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnOrderTypeSave" onclick="saveOrderType()">Save</button>
            </div>
        </div>
    </div>
</div>