<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Sub-Categories</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div class="flex-grow-1" style="min-width: 200px;">
                            <input type="text" id="txtSubCategorySearch" class="form-control" placeholder="Search sub-categories...">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadSubCategoryGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#subCategoryModal">
                            <i class="mdi mdi-plus me-1"></i> Add Sub-Category
                        </button>
                    </div>
                </div>
                <div id="subCategoryGrid"></div>
            </div>
        </div>
    </div>
</div>

<!-- Sub-Category Modal -->
<div class="modal fade" id="subCategoryModal" tabindex="-1" aria-labelledby="subCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="subCategoryModalLabel">Sub-Category Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearSubCategoryForm()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="subCategoryForm">
                    <input type="hidden" id="SubCategoryId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ParentCategory" class="form-label">Parent Category <span class="text-danger">*</span></label>
                                <select id="ParentCategory" class="form-select" required>
                                    <!-- Populate via API -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="SubCategoryCode" class="form-label">Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="SubCategoryCode" maxlength="10" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="SubCategoryName" class="form-label">Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="SubCategoryName" maxlength="100" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="SubCategoryRemarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="SubCategoryRemarks" rows="2" maxlength="500"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="SubCategoryIsActive">
                                <label class="form-check-label" for="SubCategoryIsActive">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="subCategoryAudit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#subCategoryAuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="subCategoryAuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="SubCategoryCreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="SubCategoryCreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="SubCategoryEditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="SubCategoryEditDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearSubCategoryForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnSubCategoryEdit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearSubCategoryForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnSubCategorySave" onclick="saveSubCategory()">Save</button>
            </div>
        </div>
    </div>
</div>