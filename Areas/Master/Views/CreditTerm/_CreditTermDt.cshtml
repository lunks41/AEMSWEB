<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Term Details</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div class="flex-grow-1" style="min-width: 200px;">
                            <input type="text" id="txtTermDtSearch" class="form-control" placeholder="Search term details...">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadTermDtGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#creditTermDtModal">
                            <i class="mdi mdi-plus me-1"></i> Add Term Detail
                        </button>
                    </div>
                </div>
                <div id="termDtGrid"></div>
            </div>
        </div>
    </div>
</div>

<!-- Credit Term Detail Modal -->
<div class="modal fade" id="creditTermDtModal" tabindex="-1" aria-labelledby="creditTermDtModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="creditTermDtModalLabel">Term Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearTermDtForm()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="termDtForm">
                    <input type="hidden" id="CreditTermId" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="CreditTermCode" class="form-label">Credit Term <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="CreditTermCode" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="CompanyId" class="form-label">Company <span class="text-danger">*</span></label>
                                <select id="CompanyId" class="form-select" required disabled>
                                    <!-- Populate via API -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="FromDay" class="form-label">From Day <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="FromDay" min="1" max="365" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ToDay" class="form-label">To Day <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="ToDay" min="1" max="365" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="DueDay" class="form-label">Due Day <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="DueDay" min="1" max="31" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="NoMonth" class="form-label">Number of Months <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="NoMonth" min="1" max="12" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="IsEndOfMonth">
                                <label class="form-check-label" for="IsEndOfMonth">End of Month</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="IsActiveDt">
                                <label class="form-check-label" for="IsActiveDt">Is Active</label>
                            </div>
                        </div>
                    </div>

                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="termDtAudit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#termDtAuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="termDtAuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="CreateByDt" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="CreateDateDt" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="EditByDt" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="EditDateDt" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearTermDtForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnTermDtEdit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearTermDtForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnTermDtSave" onclick="saveTermDt()">Save</button>
            </div>
        </div>
    </div>
</div>