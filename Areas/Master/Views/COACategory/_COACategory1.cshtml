<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>COA Categories - Level 1</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div class="flex-grow-1" style="min-width: 200px;">
                            <input type="text" id="txtCOA1Search" class="form-control" placeholder="Search Level 1 categories...">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadCOA1Grid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#coa1Modal">
                            <i class="mdi mdi-plus me-1"></i> Add Level 1
                        </button>
                    </div>
                </div>
                <div id="coa1Grid"></div>
            </div>
        </div>
    </div>
</div>

<!-- Level 1 Modal -->
<div class="modal fade" id="coa1Modal" tabindex="-1" aria-labelledby="coa1ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="coa1ModalLabel">Level 1 Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearCOA1Form()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="coa1Form">
                    <input type="hidden" id="COA1CategoryId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="COA1Code" class="form-label">Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="COA1Code" maxlength="10" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="COA1Name" class="form-label">Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="COA1Name" maxlength="100" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="COA1SeqNo" class="form-label">Sequence No <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="COA1SeqNo" min="1" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="COA1Remarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="COA1Remarks" rows="2" maxlength="500"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="COA1IsActive">
                                <label class="form-check-label" for="COA1IsActive">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="coa1Audit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#coa1AuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="coa1AuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="COA1CreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="COA1CreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="COA1EditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="COA1EditDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearCOA1Form()">Close</button>
                <button type="button" class="btn btn-primary" id="btnCOA1Edit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearCOA1Form()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnCOA1Save" onclick="saveCOA1()">Save</button>
            </div>
        </div>
    </div>
</div>