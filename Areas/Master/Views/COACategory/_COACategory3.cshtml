<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>COA Categories - Level 3</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div style="width: 150px;">
                            <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearSearch();">
                            <i class="mdi mdi-close"></i> Clear
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#coa3Modal">
                            <i class="mdi mdi-plus me-1"></i> Add Level 3
                        </button>
                    </div>
                </div>
                <div id="coa3Grid"></div>
            </div>
        </div>
    </div>
</div>

<!-- Level 3 Modal -->
<div class="modal fade" id="coa3Modal" tabindex="-1" aria-labelledby="coa3ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="coa3ModalLabel">Level 3 Category</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearCOA3Form()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="coa3Form">
                    <input type="hidden" id="COA3CategoryId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="COA3Code" class="form-label">Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="COA3Code" maxlength="10" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="COA3Name" class="form-label">Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="COA3Name" maxlength="100" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="COA3SeqNo" class="form-label">Sequence No <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="COA3SeqNo" min="1" required>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="COA3Remarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="COA3Remarks" rows="2" maxlength="500"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="COA3IsActive">
                                <label class="form-check-label" for="COA3IsActive">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="coa3Audit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#coa3AuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="coa3AuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="COA3CreateBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="COA3CreateDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="COA3EditBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="COA3EditDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearCOA3Form()">Close</button>
                <button type="button" class="btn btn-primary" id="btnCOA3Edit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearCOA3Form()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnCOA3Save" onclick="saveCOA3()">Save</button>
            </div>
        </div>
    </div>
</div>