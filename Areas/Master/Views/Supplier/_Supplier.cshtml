<div class="modal fade" id="addSupplierModal" tabindex="-1" aria-labelledby="addSupplierModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSupplierModalLabel">Supplier Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearSupplierForm();"></button>
            </div>
            <div class="modal-body p-4">
                <form id="supplierForm">
                    <!-- Supplier Details -->
                    <input type="hidden" id="supplierId" />

                    <!-- Basic Information -->
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Supplier Code <span class="text-danger">*</span></label>
                                <input id="supplierCode" required onblur="convertToUpperCase(this)">
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Supplier Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="supplierName" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Short Name</label>
                                <input type="text" class="form-control" id="supplierShortName">
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Other Name</label>
                                <input type="text" class="form-control" id="supplierOtherName">
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Registration No.</label>
                                <input type="text" class="form-control" id="supplierRegNo">
                            </div>
                        </div>
                    </div>

                    <!-- Financial Details -->
                    <div class="row">
                        <h5>Financial Details</h5>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label for="cmd_currency" class="form-label">Currency <span class="text-danger">*</span></label>
                                <input id="cmd_currency" />
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label for="cmd_creditTerm" class="form-label">Credit Term <span class="text-danger">*</span></label>
                                <input id="cmd_creditTerm" />
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label for="cmd_accSetup" class="form-label">Account Setup <span class="text-danger">*</span></label>
                                <input id="cmd_accSetup" />
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label for="cmd_bank" class="form-label">Bank <span class="text-danger">*</span></label>
                                <input id="cmd_bank" />
                            </div>
                        </div>
                    </div>

                    <!-- Status Flags -->
                    <div class="row ">
                        <h5>Status Flags</h5>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isSupplier">
                                <label class="form-check-label">Is Supplier</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isVendor">
                                <label class="form-check-label">Is Vendor</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isTrader">
                                <label class="form-check-label">Is Trader</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isSupplier">
                                <label class="form-check-label">Is Supplier</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isActive">
                                <label class="form-check-label">Is Active</label>
                            </div>
                        </div>
                    </div>

                    <!-- Remarks -->
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <label class="form-label">Remarks</label>
                            <textarea class="form-control" id="remarks" rows="2"></textarea>
                        </div>
                    </div>

                    <!-- Address & Contact Tabs -->
                    <!-- Tab Row with Buttons -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <!-- Tabs Navigation -->
                        <ul class="nav nav-pills" id="supplierTabs">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="pill" href="#addresses">Addresses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#contacts">Contacts</a>
                            </li>
                        </ul>

                        <!-- Action Buttons -->
                        <div>
                            <button type="button" class="btn btn-primary me-2" id="openChildAddressModal">
                                <i class="mdi mdi-plus"></i> Add Address
                            </button>
                            <button type="button" class="btn btn-primary" id="openChildContactModal">
                                <i class="mdi mdi-plus"></i> Add Contact
                            </button>
                        </div>
                    </div>

                    <!-- Tab Content -->
                    <div class="tab-content mt-3" id="supplierSubTabs">
                        <!-- Addresses Tab -->
                        <div class="tab-pane fade show active" id="addresses">
                            <div id="gridaddress"></div>
                        </div>

                        <!-- Contacts Tab -->
                        <div class="tab-pane fade" id="contacts">
                            <div id="gridcontact"></div>
                        </div>
                    </div>

                    <!-- Audit Fields -->
                    <div class="accordion mt-3" id="auditAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#auditCollapse">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="auditCollapse" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="createBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="createDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="editBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="editDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnSupplierClose" onclick="clearSupplierForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnSupplierEdit">Edit</button>
                <button type="button" class="btn btn-secondary" id="btnSupplierClear" onclick="clearSupplierForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnSupplierSave" onclick="saveSupplier()">Save</button>
            </div>
        </div>
    </div>
</div>

<script>

    function initializeSupplierForm() {
        clearSupplierForm();
    }

    function clearSupplierForm() {
        $('#supplierId').val('');
        $('#supplierCode').val('');
        $('#supplierName').val('');
        $('#supplierOtherName').val('');
        $('#supplierShortName').val('');
        $('#supplierRegNo').val('');
        $('#cmd_currency').data("kendoComboBox").value('');
        $('#cmd_creditTerm').data("kendoComboBox").value('');
        $('#cmd_accSetup').data("kendoComboBox").value('');
        $('#cmd_bank').data("kendoComboBox").value('');
        $('#remarks').val('');
        $('#isSupplier').prop('checked', false);
        $('#isVendor').prop('checked', false);
        $('#isTrader').prop('checked', false);
        $('#isSupplier').prop('checked', false);
        $('#isActive').prop('checked', true);
        $('#createBy').text('');
        $('#createDate').text('');
        $('#editBy').text('');
        $('#editDate').text('');
        $('#btnSupplierSave').prop('disabled', false);
        $('#btnSupplierSave').show();
        $('#btnSupplierClear').show();
        $('#btnSupplierEdit').hide();
        $('#supplierTabs').hide();
        $('#supplierSubTabs').hide();
        $('#openChildAddressModal').hide();
        $('#openChildContactModal').hide();
        // Check if grids exist before clearing
        const addressGrid = $("#gridaddress").data("kendoGrid");
        if (addressGrid) {
            addressGrid.dataSource.data([]);
        }

        const contactGrid = $("#gridcontact").data("kendoGrid");
        if (contactGrid) {
            contactGrid.dataSource.data([]);
        }
    }

    function loadSupplierGrid() {
        let searchString = $('#txtsearch').val();
        let url = '@Url.Action("List", "Supplier", new { area = "Master" })';
        let columns = [
            {
                title: "Actions",
                width: "150px",
                template: function (dataItem) {
                    let buttons = `<button class="ps-0 border-0 bg-transparent" onclick="openSupplierModal('${dataItem.supplierId}', 'view')">
                    <i class="material-symbols-outlined text-primary">visibility</i></button>`;

                    if (permissions.canEdit) {
                        buttons += `<button class="ps-0 border-0 bg-transparent" onclick="openSupplierModal('${dataItem.supplierId}', 'edit')">
                    <i class="material-symbols-outlined text-warning">edit</i></button>`;
                    }

                    if (permissions.canDelete) {
                        buttons += `<button class="ps-0 border-0 bg-transparent" onclick="deleteSupplier('${dataItem.supplierId}')">
                    <i class="material-symbols-outlined text-danger">delete</i></button>`;
                    }
                    return buttons;
                }
            },
            { field: "supplierCode", title: "Code" },
            { field: "supplierName", title: "Name" },
            { field: "creditTermCode", title: "Credit Term" },
            { field: "currencyName", title: "Currency Name" },
            { field: "remarks", title: "Remarks" },
            { field: "isActive", title: "Active", template: '<input type="checkbox" #= isActive ? "checked" : "" # disabled />' }
        ];

        let grid = $("#gridsupplier").data("kendoGrid");
        if (grid) {

            grid.dataSource.read({ searchString: searchString, companyId: companyId });
        } else {
            initializeKendoGrid("gridsupplier", url, { searchString, companyId }, columns);
        }
    }

    function openSupplierModal(id, mode) {
        $.get('@Url.Action("GetById", "Supplier", new { area = "Master" })', { supplierId: id, companyId })
            .done(function (response) {
                if (response.success) {
                    populateSupplierFields(response.data);
                    setSupplierMode(mode);
                    $('#addSupplierModal').modal('show');
                }
            });
    }

    function populateSupplierFields(data) {
        
        $('#supplierId').val(data.supplierId);
        $('#supplierCode').val(data.supplierCode);
        $('#supplierName').val(data.supplierName);
        $('#supplierOtherName').val(data.supplierOtherName);
        $('#supplierShortName').val(data.supplierShortName);
        $('#supplierRegNo').val(data.supplierRegNo);
        $('#cmd_currency').data("kendoComboBox").value(data.currencyId > 0 ? data.currencyId : '');
        $('#cmd_creditTerm').data("kendoComboBox").value(data.creditTermId > 0 ? data.creditTermId : '');
        $('#cmd_accSetup').data("kendoComboBox").value(data.accSetupId > 0 ? data.accSetupId : '');
        $('#cmd_bank').data("kendoComboBox").value(data.bankId > 0 ? data.bankId : '');
        $('#remarks').val(data.remarks);
        $('#isSupplier').prop('checked', data.isSupplier);
        $('#isVendor').prop('checked', data.isVendor);
        $('#isTrader').prop('checked', data.isTrader);
        $('#isSupplier').prop('checked', data.isSupplier);
        $('#isActive').prop('checked', data.isActive);

        $('#createBy').text(data.createBy || "N/A");
        $('#createDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : "N/A");
        $('#editBy').text(data.editBy || "N/A");
        $('#editDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : "N/A");

        // Before initializing grids, destroy existing ones
        const addressGrid = $("#gridaddress").data("kendoGrid");
        if (addressGrid) {
            addressGrid.destroy();
            $("#gridaddress").empty();
        }
        const contactGrid = $("#gridcontact").data("kendoGrid");
        if (contactGrid) {
            contactGrid.destroy();
            $("#gridcontact").empty();
        }

        // Reinitialize grids with new supplierId
        loadsupplierAddressGrid(data.supplierId);
        loadsupplierContactGrid(data.supplierId);
       // checkMandatoryFields();
    }

    function setSupplierMode(mode) {

        const isView = mode === 'view';
        const canEdit = permissions.canEdit && !isView;

        $('#supplierCode, #supplierName, #remarks').prop('readonly', !canEdit);
        $('#isActive').prop('disabled', !canEdit);
        $('#btnSupplierSave').toggle(canEdit);
        $('#btnSupplierEdit').toggle(isView && permissions.canEdit);
        $('#btnSupplierClose').show();
        $('#btnSupplierClear').hide();
        $('#supplierTabs').show();
        $('#supplierSubTabs').show();
        $('#openChildAddressModal').show();
        $('#openChildContactModal').show();
    }

    function deleteSupplier(id) {
        if (!permissions.canDelete) {
            toastr.info('You do not have permission to delete records.');
            return;
        }

        $('#confirmationModal').modal('show');
        $('#confirmDelete').off('click').click(function () {
            $.ajax({
                url: `/Master/Supplier/Delete?supplierId=${id}&companyId=${companyId}`,
                type: "DELETE",
                success: function (response) {
                    if (response.success) {
                        loadSupplierGrid();
                        $('#confirmationModal').modal('hide');
                    }
                }
            });
        });
    }

    function validateMandatoryFields() {
        
        const supplierCode = document.getElementById('supplierCode').value.trim();
        const supplierName = document.getElementById('supplierName').value.trim();
        const currency = $('#cmd_currency').data('kendoComboBox').value();
        const creditTerm = $('#cmd_creditTerm').data('kendoComboBox').value();
        const accountSetup = $('#cmd_accSetup').data('kendoComboBox').value();
        const bank = $('#cmd_bank').data('kendoComboBox').value();

        let isValid = true;

        if (!supplierCode) {
            toastr.error('Supplier Code is required', 'Missing Field');
            isValid = false;
        }

        if (!supplierName) {
            toastr.error('Supplier Name is required', 'Missing Field');
            isValid = false;
        }

        if (!currency) {
            toastr.error('Currency is required', 'Missing Field');
            isValid = false;
        }

        if (!creditTerm) {
            toastr.error('Credit Term is required', 'Missing Field');
            isValid = false;
        }

        if (!accountSetup) {
            toastr.error('Account Setup is required', 'Missing Field');
            isValid = false;
        }

        if (!bank) {
            toastr.error('Bank is required', 'Missing Field');
            isValid = false;
        }

        return isValid;
    }

    function saveSupplier() {
        
        console.log($('#supplierId').val());
        const supplierData = {
            SupplierId: parseInt($('#supplierId').val()) || 0,
            SupplierCode: $('#supplierCode').val().trim().toUpperCase(),
            SupplierName: $('#supplierName').val().trim(),
            SupplierOtherName: $('#supplierOtherName').val(),
            SupplierShortName: $('#supplierShortName').val(),
            SupplierRegNo: $('#supplierRegNo').val(),
            CurrencyId: parseInt($('#cmd_currency').data("kendoComboBox").value()) || 0,
            CreditTermId: parseInt($('#cmd_creditTerm').data("kendoComboBox").value()) || 0,
            AccSetupId: parseInt($('#cmd_accSetup').data("kendoComboBox").value()) || 0,
            BankId: parseInt($('#cmd_bank').data("kendoComboBox").value()) || 0,
            Remarks: $('#remarks').val(),
            IsSupplier: $('#isSupplier').prop('checked'),
            IsVendor: $('#isVendor').prop('checked'),
            IsTrader: $('#isTrader').prop('checked'),
            IsSupplier: $('#isSupplier').prop('checked'),
            IsActive: $('#isActive').prop('checked'),
            ParentSupplierId: 0,
            CustomerId: 0
        };

        if (validateMandatoryFields()) {
            $.ajax({
                url: '@Url.Action("Save", "Supplier", new { area = "Master" })',
                type: "POST",
                data: JSON.stringify({ supplier: supplierData, companyId }),
                contentType: "application/json",
                success: function (response) {
                    if (response.success) {
                        toastr.success(response.message);
                        populateSupplierFields(response.data);
                        setSupplierMode('edit');
                        loadSupplierGrid();
                    }
                }
            });
        }
    }
</script>