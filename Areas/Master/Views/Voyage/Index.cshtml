@{
    ViewData["Title"] = $"Voyage ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>Voyages</h3>

                <!-- Action Row -->
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <!-- Search Section -->
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div style="width: 150px;">
                            <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearSearch();">
                            <i class="mdi mdi-close"></i> Clear
                        </button>
                    </div>

                    <!-- Add Button -->
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addVoyageModal" id="addrecord">
                            <i class="mdi mdi-plus me-1"></i> Add Voyage
                        </button>
                    </div>
                </div>
                <div id="grid"></div>
            </div>
        </div>
    </div>
</div>

@section externalhtml {
    <!-- Add/Edit Modal -->
    <div class="modal fade" id="addVoyageModal" tabindex="-1" aria-labelledby="addVoyageModalLabel" aria-hidden="true" data-bs-backdrop="static">
        <div class="modal-dialog modal-dialog-scrollable modal-xl modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addVoyageModalLabel">Voyage Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearForm();"></button>
                </div>
                <div class="modal-body p-4">
                    <form id="voyageForm">
                        <input type="hidden" id="voyageId" />
                        <div class="row">
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="voyageNo" class="form-label">Voyage No <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="voyageNo" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="referenceNo" class="form-label">Reference No <span class="text-danger">*</span></label>
                                    <input type="text" class="form-control" id="referenceNo" required>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="cmb_vessel" class="form-label">Vessel <span class="text-danger">*</span></label>
                                    <select id="cmb_vessel" style="width: 100%"></select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    <label for="cmb_barge" class="form-label">Barge <span class="text-danger">*</span></label>
                                    <select id="cmb_barge" style="width: 100%"></select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label for="remarks" class="form-label">Remarks</label>
                                    <textarea class="form-control" id="remarks" rows="2"></textarea>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="isActive">
                                    <label class="form-check-label" for="isActive">Is Active</label>
                                </div>
                            </div>
                        </div>

                        <!-- Audit Fields -->
                        <div class="accordion mt-3" id="auditAccordion">
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#auditCollapse">
                                        Audit Details
                                    </button>
                                </h2>
                                <div id="auditCollapse" class="accordion-collapse collapse">
                                    <div class="accordion-body">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <label class="form-label">Created By</label>
                                                <p id="createBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Created Date</label>
                                                <p id="createDate" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified By</label>
                                                <p id="editBy" class="form-control-plaintext"></p>
                                            </div>
                                            <div class="col-md-6">
                                                <label class="form-label">Modified Date</label>
                                                <p id="editDate" class="form-control-plaintext"></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnDesignationClose" onclick="clearDesignationForm()">Close</button>
                    <button type="button" class="btn btn-primary" id="btnDesignationEdit">Edit</button>
                    <button type="button" class="btn btn-secondary" id="btnDesignationClear" onclick="clearDesignationForm()">Clear</button>
                    <button type="button" class="btn btn-primary" id="btnDesignationSave" onclick="saveDesignation()">Save</button>
                </div>
            </div>
        </div>
    </div>

    
}

@section Scripts {
    <script>
        let companyId = 0;
        $(document).ready(function () {
            companyId = getUrlParameter('companyId');
            $('#voyageNo, #referenceNo').on('input', checkMandatoryFields);
            loadGrid();
            loadDropdowns();
            clearForm();
        });

        function loadGrid() {
            const search = $('#txtsearch').val();
            $('#grid').kendoGrid({
                dataSource: {
                    transport: {
                        read: {
                            url: `/Master/Voyage/List?companyId=${companyId}&searchString=${search}`,
                            dataType: "json"
                        }
                    },
                    schema: {
                        data: "data",
                        total: "total"
                    },
                    pageSize: 20
                },
                height: 550,
                pageable: true,
                columns: [
                    {
                        title: "Actions",
                        template: function (dataItem) {
                            return `
                                    <button class="btn btn-sm btn-primary" onclick="openModal('${dataItem.voyageId}', 'view')">
                                        <i class="mdi mdi-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-warning" onclick="openModal('${dataItem.voyageId}', 'edit')">
                                        <i class="mdi mdi-pencil"></i>
                                    </button>
                                    <button class="btn btn-sm btn-danger" onclick="deleteVoyage('${dataItem.voyageId}')">
                                        <i class="mdi mdi-delete"></i>
                                    </button>
                                `;
                        },
                        width: "150px"
                    },
                    { field: "voyageNo", title: "Voyage No" },
                    { field: "referenceNo", title: "Reference No" },
                    { field: "vesselName", title: "Vessel" },
                    { field: "bargeName", title: "Barge" },
                    { field: "remarks", title: "Remarks" },
                    {
                        field: "isActive",
                        title: "Active",
                        template: '<input type="checkbox" #= isActive ? "checked" : "" # disabled />'
                    }
                ]
            });
        }

        function loadDropdowns() {
            // Vessel Dropdown
            $("#cmbVessel").kendoComboBox({
                dataTextField: "vesselName",
                dataValueField: "vesselId",
                dataSource: {
                    transport: {
                        read: {
                            url: `/Lookup/GetVesselLookup?companyId=${companyId}`,
                            dataType: "json"
                        }
                    }
                }
            });

            // Barge Dropdown
            $("#cmbBarge").kendoComboBox({
                dataTextField: "bargeName",
                dataValueField: "bargeId",
                dataSource: {
                    transport: {
                        read: {
                            url: `/Lookup/GetBargeLookup?companyId=${companyId}`,
                            dataType: "json"
                        }
                    }
                }
            });
        }

        function openModal(id, mode) {
            $.get(`/Master/Voyage/GetById?voyageId=${id}&companyId=${companyId}`)
                .done(function (response) {
                    if (response.success) {
                        const data = response.data;
                        $('#voyageId').val(data.voyageId);
                        $('#voyageNo').val(data.voyageNo);
                        $('#referenceNo').val(data.referenceNo);
                        $('#remarks').val(data.remarks);
                        $('#isActive').prop('checked', data.isActive);

                        // Set dropdown values
                        $("#cmbVessel").data("kendoComboBox").value(data.vesselId);
                        $("#cmbBarge").data("kendoComboBox").value(data.bargeId);

                        // Audit fields
                        $('#createBy').text(data.createBy || 'N/A');
                        $('#createDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : 'N/A');
                        $('#editBy').text(data.editBy || 'N/A');
                        $('#editDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : 'N/A');

                        setMode(mode);
                        $('#addVoyageModal').modal('show');
                    }
                });
        }

        function setMode(mode) {
            const isView = mode === 'view';
            $('#voyageNo').prop('readonly', isView);
            $('#referenceNo').prop('readonly', isView);
            $('#remarks').prop('readonly', isView);
            $('#isActive').prop('disabled', isView);
            $("#cmbVessel").data("kendoComboBox").enable(!isView);
            $("#cmbBarge").data("kendoComboBox").enable(!isView);
            $('#btnSave').toggle(!isView);
            $('#btnEdit').toggle(isView);
        }

        function deleteVoyage(id) {
            $('#confirmationModal').modal('show');
            $('#confirmDelete').off('click').click(function () {
                $.ajax({
                    url: `/Master/Voyage/Delete?voyageId=${id}&companyId=${companyId}`,
                    type: "DELETE",
                    success: function (response) {
                        if (response.success) {
                            loadGrid();
                            $('#confirmationModal').modal('hide');
                        }
                    }
                });
            });
        }

        function saveVoyage() {
            const data = {
                VoyageId: $('#voyageId').val() || 0,
                VoyageNo: $('#voyageNo').val(),
                ReferenceNo: $('#referenceNo').val(),
                VesselId: $("#cmbVessel").data("kendoComboBox").value(),
                BargeId: $("#cmbBarge").data("kendoComboBox").value(),
                Remarks: $('#remarks').val(),
                IsActive: $('#isActive').prop('checked'),
                CompanyId: companyId
            };

            if (!data.VoyageNo || !data.ReferenceNo || !data.VesselId || !data.BargeId) {
                alert('Voyage No, Reference No, Vessel, and Barge are required!');
                return;
            }

            $.post("/Master/Voyage/Save", data)
                .done(function (response) {
                    if (response.success) {
                        $('#addVoyageModal').modal('hide');
                        loadGrid();
                        clearForm();
                    }
                });
        }

        function clearForm() {
            $('#voyageForm')[0].reset();
            $('#voyageId').val(0);
            $("#cmbVessel").data("kendoComboBox").value('');
            $("#cmbBarge").data("kendoComboBox").value('');
            $('#btnSave').prop('disabled', true);
        }

        function checkMandatoryFields() {
            const isValid = $('#voyageNo').val().trim() && $('#referenceNo').val().trim();
            $('#btnSave').prop('disabled', !isValid);
        }
    </script>
}