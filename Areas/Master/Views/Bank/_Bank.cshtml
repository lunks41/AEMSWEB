<div class="modal fade" id="addBankModal" tabindex="-1" aria-labelledby="addBankModalLabel" aria-hidden="true" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-dialog-scrollable modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addBankModalLabel">Bank Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearBankForm();"></button>
            </div>
            <div class="modal-body p-4">
                <form id="bankForm">
                    <!-- Bank Details -->
                    <input type="hidden" id="bankId" />

                    <!-- Basic Information -->
                    <div class="row">
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Bank Code <span class="text-danger">*</span></label>
                                <input id="bankCode" required class="form-control" onblur="convertToUpperCase(this)">
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Bank Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="bankName" required>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label for="cmb_currency" class="form-label">Currency <span class="text-danger">*</span></label>
                                <input id="cmb_currency"/>
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label for="cmb_gl" class="form-label">Gl Account <span class="text-danger">*</span></label>
                                <select id="cmb_gl" style="width: 100%"></select>
                            </div>
                        </div>
                       
                    </div>

                    <!-- Status Flags -->
                    <div class="row ">
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Account No.</label>
                                <input type="text" class="form-control" id="accountNo">
                            </div>
                        </div>
                        <div class="col-lg-3 col-md-6 col-sm-12">
                            <div class="mb-2">
                                <label class="form-label">Swift Code</label>
                                <input type="text" class="form-control" id="swiftCode">
                            </div>
                        </div>
                        <h5>Status Flags</h5>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isOwnBank">
                                <label class="form-check-label">Is Own Bank</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isPettyCashBank">
                                <label class="form-check-label">Is Petty Cash</label>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="isActive">
                                <label class="form-check-label">Is Active</label>
                            </div>
                        </div>
                    </div>

                    <!-- Remarks -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="form-label">Remarks 1</label>
                            <textarea class="form-control" id="remarks1" rows="2"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Remarks 2</label>
                            <textarea class="form-control" id="remarks2" rows="2"></textarea>
                        </div>
                    </div>

                    <!-- Address & Contact Tabs -->
                    <!-- Tab Row with Buttons -->
                    <div class="d-flex justify-content-between align-items-center mt-4">
                        <!-- Tabs Navigation -->
                        <ul class="nav nav-pills" id="bankTabs">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="pill" href="#addresses">Addresses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="pill" href="#contacts">Contacts</a>
                            </li>
                        </ul>

                        <!-- Action Buttons -->
                        <div>
                            <button type="button" class="btn btn-primary me-2" id="openChildAddressModal">
                                <i class="mdi mdi-plus"></i> Add Address
                            </button>
                            <button type="button" class="btn btn-primary" id="openChildContactModal">
                                <i class="mdi mdi-plus"></i> Add Contact
                            </button>
                        </div>
                    </div>

                    <!-- Tab Content -->
                    <div class="tab-content mt-3" id="bankSubTabs">
                        <!-- Addresses Tab -->
                        <div class="tab-pane fade show active" id="addresses">
                            <div id="gridaddress"></div>
                        </div>

                        <!-- Contacts Tab -->
                        <div class="tab-pane fade" id="contacts">
                            <div id="gridcontact"></div>
                        </div>
                    </div>

                    <!-- Audit Fields -->
                    <div class="accordion mt-3" id="auditAccordion">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                                        data-bs-target="#auditCollapse">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="auditCollapse" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="createBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="createDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="editBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="editDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="btnBankClose" onclick="clearBankForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnBankEdit">Edit</button>
                <button type="button" class="btn btn-secondary" id="btnBankClear" onclick="clearBankForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnBankSave" onclick="saveBank()">Save</button>
            </div>
        </div>
    </div>
</div>

<script>

    function initializeBankForm() {
        clearBankForm();
    }

    function clearBankForm() {
        $('#bankId').val('');
        $('#bankCode').val('');
        $('#bankName').val('');
        $('#accountNo').val('');
        $('#swiftCode').val('');
        $('#cmb_currency').data("kendoComboBox").value('');
        $('#cmb_gl').data("kendoMultiColumnComboBox").value('');
        $('#remarks1').val('');
        $('#remarks2').val('');
        $('#isOwnBank').prop('checked', false);
        $('#isPettyCashBank').prop('checked', false);

        $('#isActive').prop('checked', true);
        $('#createBy').text('');
        $('#createDate').text('');
        $('#editBy').text('');
        $('#editDate').text('');
        $('#btnBankSave').prop('disabled', false);
        $('#btnBankSave').show();
        $('#btnBankClear').show();
        $('#btnBankEdit').hide();
        $('#bankTabs').hide();
        $('#bankSubTabs').hide();
        $('#openChildAddressModal').hide();
        $('#openChildContactModal').hide();
        // Check if grids exist before clearing
        const addressGrid = $("#gridaddress").data("kendoGrid");
        if (addressGrid) {
            addressGrid.dataSource.data([]);
        }

        const contactGrid = $("#gridcontact").data("kendoGrid");
        if (contactGrid) {
            contactGrid.dataSource.data([]);
        }
    }

    function loadBankGrid() {
        let searchString = $('#txtsearch').val();
        let url = '@Url.Action("List", "Bank", new { area = "Master" })';
        let columns = [
            {
                title: "Actions",
                width: "110px",
                template: function (dataItem) {
                    let buttons = `<button class="ps-0 border-0 bg-transparent" onclick="openBankModal('${dataItem.bankId}', 'view')">
                    <i class="material-symbols-outlined text-primary">visibility</i></button>`;

                    if (permissions.canEdit) {
                        buttons += `<button class="ps-0 border-0 bg-transparent" onclick="openBankModal('${dataItem.bankId}', 'edit')">
                    <i class="material-symbols-outlined text-warning">edit</i></button>`;
                    }

                    if (permissions.canDelete) {
                        buttons += `<button class="ps-0 border-0 bg-transparent" onclick="deleteBank('${dataItem.bankId}')">
                    <i class="material-symbols-outlined text-danger">delete</i></button>`;
                    }
                    return buttons;
                }
            },
            { field: "bankCode", title: "Code",width:"100px" },
            { field: "bankName", title: "Name", width: "180px" },
            { field: "currencyName", title: "Currency Name", width: "110px" },
            { field: "accountNo", title: "Account No", width: "150px" },
            { field: "swiftCode", title: "Swift Code", width: "150px" },
            { field: "glCode", title: "Gl Account", width: "100px" },
            { field: "glName", title: "Gl Name", width: "150px" },
            { field: "isOwnBank", title: "Own Bank", width: "120px", template: '<input type="checkbox" #= isOwnBank ? "checked" : "" # disabled />' },
            { field: "isPettyCashBank", title: "Petty Cash", width: "120px", template: '<input type="checkbox" #= isPettyCashBank ? "checked" : "" # disabled />' },
            { field: "isActive", title: "Active", width: "120px", template: '<input type="checkbox" #= isActive ? "checked" : "" # disabled />' },
            { field: "remarks1", title: "Remarks 1", width: "250px" },
            { field: "remarks2", title: "Remarks 2", width: "250px" },
        ];

        let grid = $("#gridbank").data("kendoGrid");
        if (grid) {

            grid.dataSource.read({ searchString: searchString, companyId: companyId });
        } else {
            initializeKendoGrid("gridbank", url, { searchString, companyId }, columns);
        }
    }

    function openBankModal(id, mode) {
        $.get('@Url.Action("GetById", "Bank", new { area = "Master" })', { bankId: id, companyId })
            .done(function (response) {
                if (response.success) {
                    populateBankFields(response.data);
                    setBankMode(mode);
                    $('#addBankModal').modal('show');
                }
            });
    }

    function populateBankFields(data) {
        $('#bankId').val(data.bankId);
        $('#bankCode').val(data.bankCode);
        $('#bankName').val(data.bankName);
        $('#accountNo').val(data.accountNo);
        $('#swiftCode').val(data.accountNo);
        $('#cmb_currency').data("kendoComboBox").value(data.currencyId > 0 ? data.currencyId : '');
        $('#cmb_gl').data('kendoMultiColumnComboBox').value(data.glId > 0 ? data.glId : '');
        $('#remarks1').val(data.remarks1);
        $('#remarks2').val(data.remarks2);
        $('#isOwnBank').prop('checked', data.isOwnBank);
        $('#isPettyCashBank').prop('checked', data.isPettyCashBank);
        $('#isActive').prop('checked', data.isActive);

        $('#createBy').text(data.createBy || "N/A");
        $('#createDate').text(data.createDate ? new Date(data.createDate).toLocaleString() : "N/A");
        $('#editBy').text(data.editBy || "N/A");
        $('#editDate').text(data.editDate ? new Date(data.editDate).toLocaleString() : "N/A");

        // Before initializing grids, destroy existing ones
        const addressGrid = $("#gridaddress").data("kendoGrid");
        if (addressGrid) {
            addressGrid.destroy();
            $("#gridaddress").empty();
        }
        const contactGrid = $("#gridcontact").data("kendoGrid");
        if (contactGrid) {
            contactGrid.destroy();
            $("#gridcontact").empty();
        }

        // Reinitialize grids with new bankId
        loadbankAddressGrid(data.bankId);
        loadbankContactGrid(data.bankId);
       // checkMandatoryFields();
    }

    function setBankMode(mode) {

        const isView = mode === 'view';
        const canEdit = permissions.canEdit && !isView;

        $('#bankCode, #bankName, #accountNo,#swiftCode,#remarks1,#remarks2').prop('readonly', !canEdit);
        $('#isActive,#isOwnBank,#isPettyCashBank').prop('disabled', !canEdit);
        $('#btnBankSave').toggle(canEdit);
        $('#btnBankEdit').toggle(isView && permissions.canEdit);
        $('#btnBankClose').show();
        $('#btnBankClear').hide();
        $('#bankTabs').show();
        $('#bankSubTabs').show();
        $('#openChildAddressModal').show();
        $('#openChildContactModal').show();
    }

    function deleteBank(id) {
        if (!permissions.canDelete) {
            toastr.info('You do not have permission to delete records.');
            return;
        }

        $('#confirmationModal').modal('show');
        $('#confirmDelete').off('click').click(function () {
            $.ajax({
                url: `/Master/Bank/Delete?bankId=${id}&companyId=${companyId}`,
                type: "DELETE",
                success: function (response) {
                    if (response.success) {
                        loadBankGrid();
                        $('#confirmationModal').modal('hide');
                    }
                }
            });
        });
    }

    function validateMandatoryFields() {

        const bankCode = document.getElementById('bankCode').value.trim();
        const bankName = document.getElementById('bankName').value.trim();
        const currency = $('#cmb_currency').data('kendoComboBox').value();
        const glaccount = $('#cmb_gl').data('kendoMultiColumnComboBox').value();

        let isValid = true;

        if (!bankCode) {
            toastr.error('Bank Code is required', 'Missing Field');
            isValid = false;
        }

        if (!bankName) {
            toastr.error('Bank Name is required', 'Missing Field');
            isValid = false;
        }

        if (!currency) {
            toastr.error('Currency is required', 'Missing Field');
            isValid = false;
        }

        if (!glaccount) {
            toastr.error('Gl Account is required', 'Missing Field');
            isValid = false;
        }

        return isValid;
    }

    function saveBank() {

        const bankData = {
            BankId: parseInt($('#bankId').val()) || 0,
            BankCode: $('#bankCode').val().trim().toUpperCase(),
            BankName: $('#bankName').val().trim(),
            AccountNo: $('#accountNo').val(),
            SwiftCode: $('#swiftCode').val(),
            CurrencyId: parseInt($('#cmb_currency').data("kendoComboBox").value()) || 0,
            Remarks1: $('#remarks1').val(),
            Remarks2: $('#remarks2').val(),
            IsOwnBank: $('#isOwnBank').prop('checked'),
            IsPettyCashBank: $('#isPettyCashBank').prop('checked'),
            IsActive: $('#isActive').prop('checked'),
        };

        if (validateMandatoryFields()) {
            $.ajax({
                url: '@Url.Action("Save", "Bank", new { area = "Master" })',
                type: "POST",
                data: JSON.stringify({ bank: bankData, companyId }),
                contentType: "application/json",
                success: function (response) {
                    if (response.success) {
                        toastr.success(response.message);
                        populateBankFields(response.data);
                        setBankMode('edit');
                        loadBankGrid();
                    }
                }
            });
        }
    }
</script>