<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>GST</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div style="width: 150px;">
                            <input type="text" id="txtsearch" class="form-control" placeholder="Search..." onkeydown="handleEnterKey(event)">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                        <button type="button" class="btn btn-secondary" onclick="clearSearch();">
                            <i class="mdi mdi-close"></i> Clear
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#gstModal">
                            <i class="mdi mdi-plus me-1"></i> Add GST
                        </button>
                    </div>
                </div>
                <div id="gstGrid"></div>
            </div>
        </div>
    </div>
</div>

<!-- GST Modal -->
<div class="modal fade" id="gstModal" tabindex="-1" aria-labelledby="gstModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="gstModalLabel">GST Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearGstForm()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="gstForm">
                    <input type="hidden" id="GstId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="GstCode" class="form-label">GST Code <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="GstCode" maxlength="10" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="GstName" class="form-label">GST Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="GstName" maxlength="100" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="GstCategoryId" class="form-label">GST Category <span class="text-danger">*</span></label>
                                <select id="GstCategoryId" class="form-select" required>
                                    <!-- Populate via API -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="mb-3">
                                <label for="Remarks" class="form-label">Remarks</label>
                                <textarea class="form-control" id="Remarks" rows="2" maxlength="500"></textarea>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="IsActive">
                                <label class="form-check-label" for="IsActive">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="gstAudit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#gstAuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="gstAuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label for="createBy" class="form-label">Created By</label>
                                            <p id="createBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="createDate" class="form-label">Created Date</label>
                                            <p id="createDate" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="editBy" class="form-label">Modified By</label>
                                            <p id="editBy" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label for="editDate" class="form-label">Modified Date</label>
                                            <p id="editDate" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearGstForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnGstEdit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearGstForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnGstSave" onclick="saveGst()">Save</button>
            </div>
        </div>
    </div>
</div>