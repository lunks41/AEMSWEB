<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h3>GST Details</h3>
                <div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
                    <div class="d-flex flex-grow-1 gap-2 align-items-center me-3">
                        <div class="flex-grow-1" style="min-width: 200px;">
                            <input type="text" id="txtGstDtSearch" class="form-control" placeholder="Search GST details...">
                        </div>
                        <button type="button" class="btn btn-primary" onclick="loadGstDtGrid();">
                            <i class="mdi mdi-magnify"></i> Search
                        </button>
                    </div>
                    <div class="ms-auto">
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#gstDtModal">
                            <i class="mdi mdi-plus me-1"></i> Add GST Detail
                        </button>
                    </div>
                </div>
                <div id="gstDtGrid"></div>
            </div>
        </div>
    </div>
</div>

<!-- GST Detail Modal -->
<div class="modal fade" id="gstDtModal" tabindex="-1" aria-labelledby="gstDtModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="gstDtModalLabel">GST Detail</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="clearGstDtForm()"></button>
            </div>
            <div class="modal-body p-4">
                <form id="gstDtForm">
                    <input type="hidden" id="GstDtId" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="GstCode" class="form-label">GST <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="GstCode" readonly>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="CompanyId" class="form-label">Company <span class="text-danger">*</span></label>
                                <select id="CompanyId" class="form-select" required disabled>
                                    <!-- Populate via API -->
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="GstPercentage" class="form-label">GST % <span class="text-danger">*</span></label>
                                <input type="number" step="0.01" class="form-control" id="GstPercentage" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="ValidFrom" class="form-label">Valid From <span class="text-danger">*</span></label>
                                <input type="date" class="form-control" id="ValidFrom" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="IsActiveDt">
                                <label class="form-check-label" for="IsActiveDt">Is Active</label>
                            </div>
                        </div>
                    </div>
                    <!-- Audit Section -->
                    <div class="accordion mt-3" id="gstDtAudit">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#gstDtAuditBody">
                                    Audit Details
                                </button>
                            </h2>
                            <div id="gstDtAuditBody" class="accordion-collapse collapse">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label class="form-label">Created By</label>
                                            <p id="CreateByDt" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Created Date</label>
                                            <p id="CreateDateDt" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified By</label>
                                            <p id="EditByDt" class="form-control-plaintext"></p>
                                        </div>
                                        <div class="col-md-6">
                                            <label class="form-label">Modified Date</label>
                                            <p id="EditDateDt" class="form-control-plaintext"></p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="clearGstDtForm()">Close</button>
                <button type="button" class="btn btn-primary" id="btnGstDtEdit">Edit</button>
                <button type="button" class="btn btn-secondary" onclick="clearGstDtForm()">Clear</button>
                <button type="button" class="btn btn-primary" id="btnGstDtSave" onclick="saveGstDt()">Save</button>
            </div>
        </div>
    </div>
</div>